@page "/test/core-components"
@using RR.Blazor.TestPages.Demos
@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums
@using RR.Blazor.Services
@using Microsoft.AspNetCore.Components

<RThemeProvider>
    <div class="container pa-6">
        <RHeaderCard Title="RR.Blazor Core Components Showcase" 
                     Icon="dashboard">
            <ChildContent>
                Complete demonstration of all core R* components with variants, states, and professional use cases organized in a responsive grid layout
            </ChildContent>
        </RHeaderCard>

        <div class="space-y-8 mt-6">
            <!-- Core Components Grid -->
            <div class="space-y-4">
                <RDivider Text="Core Components" 
                          Subtitle="Essential UI building blocks with comprehensive examples" 
                          Icon="widgets" />
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <RActionGroupDemo />
                    <RButtonDemo />
                    
                    <RBadgeDemo />
                    <RAvatarDemo />
                    
                    <RChipDemo />
                    <RChoiceDemo />
                    
                    <!-- Row 5: Header Card (spans 2 columns) -->
                    <div class="lg:col-span-2">
                        <RHeaderCardDemo />
                    </div>
                </div>
            </div>

            <RCardDemo />
            <RDividerDemo />

            <!-- Form Components Grid -->
            <div class="space-y-4">
                <RDivider Text="Form Components" 
                          Subtitle="Input controls and form elements with validation and professional styling" 
                          Icon="edit_note" />
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Row 1: Checkbox & Radio -->
                    <RCheckboxDemo />
                    <RRadioDemo />
                    
                    <!-- Row 2: Toggle & Text Input -->
                    <RToggleDemo />
                    <RTextInputDemo />
                </div>
            </div>

            <!-- Feedback Components Grid -->
            <div class="space-y-4">
                <RDivider Text="Feedback Components" 
                          Subtitle="Alerts, notifications, and progress indicators for user feedback" 
                          Icon="feedback" />
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Row 1: Alert & Progress Bar -->
                    <RAlertDemo />
                    <RProgressBarDemo />
                </div>
            </div>

            <!-- System Components Grid -->
            <div class="space-y-4">
                <RDivider Text="System Components" 
                          Subtitle="Theme management, modals, and notification systems" 
                          Icon="settings" />
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Row 1: Theme Provider & Switcher -->
                    <RThemeProviderDemo />
                    <RThemeSwitcherDemo />
                    
                    <!-- Row 2: Modal & Toast (spans full width each due to complexity) -->
                    <div class="lg:col-span-2">
                        <RModalDemo />
                    </div>
                    <div class="lg:col-span-2">
                        <RToastDemo />
                    </div>
                </div>
            </div>

            <!-- Navigation Components Grid -->
            <div class="space-y-4">
                <RDivider Text="Navigation Components" 
                          Subtitle="Tab navigation and organizational components" 
                          Icon="tab" />
                
                <div class="grid grid-cols-1 gap-6">
                    <!-- Tabs Demo - Full Width -->
                    <RTabsDemo />
                </div>
            </div>

            <!-- Typography & Design System -->
            <div class="space-y-4">
                <RDivider Text="Typography & Design System" 
                          Subtitle="Typography system, text utilities, and design tokens" 
                          Icon="text_fields" />
                
                <div class="grid grid-cols-1 gap-6">
                    <!-- Typography Demo - Full Width -->
                    <RTypographyDemo />
                </div>
            </div>

            <!-- Summary -->
            <RCard Variant="CardVariant.Glass" class="mt-8">
                <ChildContent>
                    <RDivider Text="Component Summary" Icon="summarize" />
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 ma-4">
                        <RCard Text="25+ R* Components" 
                               Content="Comprehensive set of core, form, feedback, system, navigation, and typography demos"
                               Icon="widgets" 
                               Variant="CardVariant.Outlined" />
                        <RCard Text="Responsive Grid" 
                               Content="Adaptive layout optimized for all screen sizes"
                               Icon="responsive_layout" 
                               Variant="CardVariant.Outlined" />
                        <RCard Text="Interactive Demos" 
                               Content="Live components with real functionality and state"
                               Icon="play_arrow" 
                               Variant="CardVariant.Outlined" />
                        <RCard Text="Professional Examples" 
                               Content="Enterprise-ready patterns and use cases"
                               Icon="business" 
                               Variant="CardVariant.Outlined" />
                    </div>
                </ChildContent>
            </RCard>
        </div>
    </div>
</RThemeProvider>

<!-- Toast Container for notifications -->
<RToastContainer />

@code {
    // This page now uses individual demo components
    // All component-specific logic has been moved to their respective demo files
}