                            <div class="flex items-center gap-3 flex-wrap">
                                <RBadge Text="Primary" Variant="BadgeVariant.Primary" />
                                <RBadge Text="Secondary" Variant="BadgeVariant.Secondary" />
                                <RBadge Text="Success" Variant="BadgeVariant.Success" />
                                <RBadge Text="Warning" Variant="BadgeVariant.Warning" />
                                <RBadge Text="Danger" Variant="BadgeVariant.Danger" />
