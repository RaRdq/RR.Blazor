                                <RBadge Text="Warning" Icon="warning" Variant="BadgeVariant.Warning" />
                                <RBadge Text="Error" Icon="error" Variant="BadgeVariant.Danger" />
                                <RBadge Text="Info" Icon="info" Variant="BadgeVariant.Info" />
                                <RBadge Text="Star" Icon="star" Variant="BadgeVariant.Primary" />
