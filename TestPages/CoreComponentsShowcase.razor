                            <div class="text-h6 font-semibold">Count Examples</div>
                            <div class="flex items-center gap-3">
                                <RBadge Text="1" Variant="BadgeVariant.Danger" />
                                <RBadge Text="25" Variant="BadgeVariant.Primary" />
                                <RBadge Text="99+" Variant="BadgeVariant.Warning" />
                                <RBadge Text="New" Variant="BadgeVariant.Success" />
                            </div>
                        </div>
                    </div>
                </ChildContent>
            </RCard>

            <!-- RButton Component -->
            <RCard Variant="CardVariant.Outlined" Text="RButton">
                <ChildContent>
                    <RSectionDivider Text="Button Component" 
