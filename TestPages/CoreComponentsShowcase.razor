@page "/test/core-components"
@using RR.Blazor.Components.Core
@using RR.Blazor.Enums
@using Microsoft.AspNetCore.Components

<RThemeProvider>
    <div class="container pa-6">
        <RHeaderCard Header="RR.Blazor Core Components Showcase" 
                     Icon="dashboard"
>
            <ChildContent>
                Complete demonstration of all 13 core components with variants, states, and professional use cases
            </ChildContent>
        </RHeaderCard>

        <div class="space-y-8 mt-6">

            <!-- RActionGroup Component -->
            <RCard Variant="CardVariant.Outlined" Text="RActionGroup">
                <ChildContent>
                    <RDivider Text="Action Group Component" 
                              Subtitle="Professional action group for organizing buttons with consistent spacing" 
                              Icon="settings" />
                    
                    <div class="space-y-6">
                        <!-- Horizontal Standard Actions -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Standard Patterns</div>
                            <div class="space-y-4">
                                <div>
                                    <p class="text-sm text-muted mb-2">Cancel/Save Pattern</p>
                                    <RActionGroup Pattern="ActionGroupPattern.CancelSave" />
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Back/Next Pattern</p>
                                    <RActionGroup Pattern="ActionGroupPattern.BackNext" />
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Approve/Reject Pattern</p>
                                    <RActionGroup Pattern="ActionGroupPattern.ApproveReject" />
                                </div>
                            </div>
                        </div>

                        <!-- Different Alignments -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Alignment Options</div>
                            <div class="space-y-4">
                                <div>
                                    <p class="text-sm text-muted mb-2">Start Alignment</p>
                                    <RActionGroup Alignment="ActionGroupAlignment.Start">
                                        <RButton Text="Action 1" Variant="ButtonVariant.Primary" />
                                        <RButton Text="Action 2" Variant="ButtonVariant.Secondary" />
                                        <RButton Text="Action 3" Variant="ButtonVariant.Outline" />
                                    </RActionGroup>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Center Alignment</p>
                                    <RActionGroup Alignment="ActionGroupAlignment.Center">
                                        <RButton Text="Action 1" Variant="ButtonVariant.Primary" />
                                        <RButton Text="Action 2" Variant="ButtonVariant.Secondary" />
                                    </RActionGroup>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Space Between</p>
                                    <RActionGroup Alignment="ActionGroupAlignment.SpaceBetween">
                                        <RButton Text="Cancel" Variant="ButtonVariant.Secondary" />
                                        <RButton Text="Save Changes" Variant="ButtonVariant.Primary" />
                                    </RActionGroup>
                                </div>
                            </div>
                        </div>

                        <!-- Vertical Layout -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Vertical Layout</div>
                            <div class="max-w-48">
                                <RActionGroup Direction="ActionGroupDirection.Vertical" FullWidth="true">
                                    <RButton Text="Primary Action" Variant="ButtonVariant.Primary" />
                                    <RButton Text="Secondary Action" Variant="ButtonVariant.Secondary" />
                                    <RButton Text="Outline Action" Variant="ButtonVariant.Outline" />
                                </RActionGroup>
                            </div>
                        </div>
                    </div>
                </ChildContent>
            </RCard>

            <!-- RAvatar Component -->
            <RCard Variant="CardVariant.Outlined" Text="RAvatar">
                <ChildContent>
                    <RDivider Text="Avatar Component" 
                                     Subtitle="Professional avatar for user representation with status indicators" 
                                     Icon="person" />
                    
                    <div class="space-y-6">
                        <!-- Sizes -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Sizes</div>
                            <div class="avatars-normal">
                                <RAvatar Size="SizeType.ExtraSmall" Text="XS" />
                                <RAvatar Size="SizeType.Small" Text="SM" />
                                <RAvatar Size="SizeType.Medium" Text="MD" />
                                <RAvatar Size="SizeType.Large" Text="LG" />
                                <RAvatar Size="SizeType.ExtraLarge" Text="XL" />
                                <RAvatar Size="SizeType.ExtraLarge2X" Text="2XL" />
                            </div>
                        </div>

                        <!-- Variants -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Variants</div>
                            <div class="avatars-normal">
                                <RAvatar Variant="AvatarVariant.Default" Text="DF" />
                                <RAvatar Variant="AvatarVariant.Primary" Text="PR" />
                                <RAvatar Variant="AvatarVariant.Success" Text="SC" />
                                <RAvatar Variant="AvatarVariant.Warning" Text="WR" />
                                <RAvatar Variant="AvatarVariant.Error" Text="ER" />
                                <RAvatar Variant="AvatarVariant.Gradient" Text="GR" />
                            </div>
                        </div>

                        <!-- Density Options -->
                        <div class="space-y-4">
                            <div class="text-h6 font-semibold">Density Options</div>
                            <div class="space-y-3">
                                <div>
                                    <p class="text-sm text-muted mb-2">Compact Spacing</p>
                                    <div class="avatars-compact">
                                        <RAvatar Text="A1" Variant="AvatarVariant.Primary" />
                                        <RAvatar Text="B2" Variant="AvatarVariant.Success" />
                                        <RAvatar Text="C3" Variant="AvatarVariant.Warning" />
                                        <RAvatar Text="D4" Variant="AvatarVariant.Error" />
                                    </div>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Normal Spacing</p>
                                    <div class="avatars-normal">
                                        <RAvatar Text="A1" Variant="AvatarVariant.Primary" />
                                        <RAvatar Text="B2" Variant="AvatarVariant.Success" />
                                        <RAvatar Text="C3" Variant="AvatarVariant.Warning" />
                                        <RAvatar Text="D4" Variant="AvatarVariant.Error" />
                                    </div>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Spacious Layout</p>
                                    <div class="avatars-spacious">
                                        <RAvatar Text="A1" Variant="AvatarVariant.Primary" />
                                        <RAvatar Text="B2" Variant="AvatarVariant.Success" />
                                        <RAvatar Text="C3" Variant="AvatarVariant.Warning" />
                                        <RAvatar Text="D4" Variant="AvatarVariant.Error" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- With Status -->
                        <div class="space-y-4">
                            <div class="text-h6 font-semibold">Status Indicators</div>
                            <div class="space-y-3">
                                <div>
                                    <p class="text-sm text-muted mb-2">Different Sizes with Status</p>
                                    <div class="avatars-normal">
                                        <RAvatar Size="SizeType.Small" Text="SM" ShowStatus="true" Status="AvatarStatus.Online" />
                                        <RAvatar Size="SizeType.Medium" Text="MD" ShowStatus="true" Status="AvatarStatus.Away" />
                                        <RAvatar Size="SizeType.Large" Text="LG" ShowStatus="true" Status="AvatarStatus.Busy" />
                                        <RAvatar Size="SizeType.ExtraLarge" Text="XL" ShowStatus="true" Status="AvatarStatus.Offline" />
                                    </div>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Status Types</p>
                                    <div class="avatars-spacious">
                                        <RAvatar Text="ON" ShowStatus="true" Status="AvatarStatus.Online" Variant="AvatarVariant.Success" />
                                        <RAvatar Text="AW" ShowStatus="true" Status="AvatarStatus.Away" Variant="AvatarVariant.Warning" />
                                        <RAvatar Text="BY" ShowStatus="true" Status="AvatarStatus.Busy" Variant="AvatarVariant.Error" />
                                        <RAvatar Text="OF" ShowStatus="true" Status="AvatarStatus.Offline" Variant="AvatarVariant.Default" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- With Badges -->
                        <div class="space-y-4">
                            <div class="text-h6 font-semibold">Badge Notifications</div>
                            <div class="space-y-3">
                                <div>
                                    <p class="text-sm text-muted mb-2">Badge Scaling with Size</p>
                                    <div class="avatars-normal">
                                        <RAvatar Size="SizeType.Small" Text="SM" ShowBadge="true" BadgeCount="3" />
                                        <RAvatar Size="SizeType.Medium" Text="MD" ShowBadge="true" BadgeCount="15" />
                                        <RAvatar Size="SizeType.Large" Text="LG" ShowBadge="true" BadgeCount="99" />
                                        <RAvatar Size="SizeType.ExtraLarge" Text="XL" ShowBadge="true" BadgeCount="150" />
                                    </div>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Different Badge Counts</p>
                                    <div class="avatars-spacious">
                                        <RAvatar Text="B1" ShowBadge="true" BadgeCount="3" Variant="AvatarVariant.Primary" />
                                        <RAvatar Text="B2" ShowBadge="true" BadgeCount="15" Variant="AvatarVariant.Success" />
                                        <RAvatar Text="B3" ShowBadge="true" BadgeCount="99" Variant="AvatarVariant.Warning" />
                                        <RAvatar Text="B4" ShowBadge="true" BadgeCount="150" Variant="AvatarVariant.Error" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- With Icons -->
                        <div class="space-y-4">
                            <div class="text-h6 font-semibold">Icon Avatars</div>
                            <div class="space-y-3">
                                <div>
                                    <p class="text-sm text-muted mb-2">Icon Size Scaling</p>
                                    <div class="avatars-normal">
                                        <RAvatar Size="SizeType.Small" Icon="person" />
                                        <RAvatar Size="SizeType.Medium" Icon="account_circle" Variant="AvatarVariant.Primary" />
                                        <RAvatar Size="SizeType.Large" Icon="face" Variant="AvatarVariant.Success" />
                                        <RAvatar Size="SizeType.ExtraLarge" Icon="group" Variant="AvatarVariant.Warning" />
                                        <RAvatar Size="SizeType.ExtraLarge2X" Icon="star" Variant="AvatarVariant.Gradient" />
                                    </div>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Different Icon Types</p>
                                    <div class="avatars-spacious">
                                        <RAvatar Icon="person" Variant="AvatarVariant.Default" />
                                        <RAvatar Icon="account_circle" Variant="AvatarVariant.Primary" />
                                        <RAvatar Icon="face" Variant="AvatarVariant.Success" />
                                        <RAvatar Icon="group" Variant="AvatarVariant.Warning" />
                                        <RAvatar Icon="star" Variant="AvatarVariant.Gradient" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Avatar Groups -->
                        <div class="space-y-4">
                            <div class="text-h6 font-semibold">Avatar Groups</div>
                            <div class="space-y-3">
                                <div>
                                    <p class="text-sm text-muted mb-2">Default Group</p>
                                    <div class="avatar-group">
                                        <RAvatar Text="AB" Variant="AvatarVariant.Primary" />
                                        <RAvatar Text="CD" Variant="AvatarVariant.Success" />
                                        <RAvatar Text="EF" Variant="AvatarVariant.Warning" />
                                        <RAvatar Text="GH" Variant="AvatarVariant.Error" />
                                        <RAvatar Text="+5" Class="avatar-group-more" />
                                    </div>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Compact Group</p>
                                    <div class="avatar-group avatar-group-compact">
                                        <RAvatar Text="AB" Variant="AvatarVariant.Primary" />
                                        <RAvatar Text="CD" Variant="AvatarVariant.Success" />
                                        <RAvatar Text="EF" Variant="AvatarVariant.Warning" />
                                        <RAvatar Text="GH" Variant="AvatarVariant.Error" />
                                        <RAvatar Text="+8" Class="avatar-group-more" />
                                    </div>
                                </div>
                                <div>
                                    <p class="text-sm text-muted mb-2">Separated Group</p>
                                    <div class="avatar-group avatar-group-separated">
                                        <RAvatar Text="AB" Variant="AvatarVariant.Primary" />
                                        <RAvatar Text="CD" Variant="AvatarVariant.Success" />
                                        <RAvatar Text="EF" Variant="AvatarVariant.Warning" />
                                        <RAvatar Text="GH" Variant="AvatarVariant.Error" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </ChildContent>
            </RCard>

            <!-- RChip Component (Unified: Badge, Chip, Status) -->
            <RCard Variant="CardVariant.Outlined" Text="RChip">
                <ChildContent>
                    <RDivider Text="Unified Chip Component" 
                                     Subtitle="Unified component for badges, chips, and status indicators with comprehensive styling options" 
                                     Icon="label" />
                    
                    <div class="space-y-6">
                        <!-- Style Variants -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Chip Styles</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RChip Text="Badge Style" Style="ChipStyle.Badge" Variant="VariantType.Primary" />
                                <RChip Text="Chip Style" Style="ChipStyle.Chip" Variant="VariantType.Secondary" />
                                <RChip Text="Status Style" Style="ChipStyle.Status" Variant="VariantType.Success" />
                            </div>
                        </div>

                        <!-- Color Variants -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Color Variants</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RChip Text="Primary" Variant="VariantType.Primary" />
                                <RChip Text="Secondary" Variant="VariantType.Secondary" />
                                <RChip Text="Success" Variant="VariantType.Success" />
                                <RChip Text="Warning" Variant="VariantType.Warning" />
                                <RChip Text="Error" Variant="VariantType.Error" />
                                <RChip Text="Info" Variant="VariantType.Info" />
                            </div>
                        </div>

                        <!-- Sizes -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Sizes</div>
                            <div class="flex items-center gap-3">
                                <RChip Text="Small" Size="SizeType.Small" />
                                <RChip Text="Medium" Size="SizeType.Medium" />
                                <RChip Text="Large" Size="SizeType.Large" />
                            </div>
                        </div>

                        <!-- With Icons -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">With Icons</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RChip Text="Active" Icon="check_circle" Variant="VariantType.Success" />
                                <RChip Text="Warning" Icon="warning" Variant="VariantType.Warning" />
                                <RChip Text="Error" Icon="error" Variant="VariantType.Error" />
                                <RChip Text="Info" Icon="info" Variant="VariantType.Info" />
                                <RChip Text="Star" Icon="star" Variant="VariantType.Primary" />
                            </div>
                        </div>

                        <!-- Interactive States -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Interactive States</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RChip Text="Clickable" Clickable="true" Variant="VariantType.Primary" />
                                <RChip Text="Closeable" Closeable="true" Variant="VariantType.Secondary" />
                                <RChip Text="Selected" Selected="true" Variant="VariantType.Success" />
                                <RChip Text="Disabled" Disabled="true" Variant="VariantType.Warning" />
                            </div>
                        </div>

                        <!-- Density Variations -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Density</div>
                            <div class="flex items-center gap-3">
                                <RChip Text="Compact" Density="DensityType.Compact" />
                                <RChip Text="Dense" Density="DensityType.Dense" />
                                <RChip Text="Normal" Density="DensityType.Normal" />
                                <RChip Text="Spacious" Density="DensityType.Spacious" />
                            </div>
                        </div>

                        <!-- Badge Style Examples -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Badge Style Examples</div>
                            <div class="flex items-center gap-3">
                                <RChip Text="1" Style="ChipStyle.Badge" Variant="VariantType.Error" />
                                <RChip Text="25" Style="ChipStyle.Badge" Variant="VariantType.Primary" />
                                <RChip Text="99+" Style="ChipStyle.Badge" Variant="VariantType.Warning" />
                                <RChip Text="New" Style="ChipStyle.Badge" Variant="VariantType.Success" />
                            </div>
                        </div>

                        <!-- Status Style Examples -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Status Style Examples</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RChip Text="Online" Style="ChipStyle.Status" Variant="VariantType.Success" />
                                <RChip Text="Pending" Style="ChipStyle.Status" Variant="VariantType.Warning" />
                                <RChip Text="Offline" Style="ChipStyle.Status" Variant="VariantType.Error" />
                                <RChip Text="Idle" Style="ChipStyle.Status" Variant="VariantType.Info" />
                            </div>
                        </div>

                        <!-- Chip Style Examples -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Chip Style Examples</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RChip Text="JavaScript" Style="ChipStyle.Chip" Variant="VariantType.Info" Closeable="true" />
                                <RChip Text="React" Style="ChipStyle.Chip" Variant="VariantType.Primary" Closeable="true" />
                                <RChip Text="Blazor" Style="ChipStyle.Chip" Variant="VariantType.Success" Closeable="true" />
                                <RChip Text="CSS" Style="ChipStyle.Chip" Variant="VariantType.Warning" Closeable="true" />
                            </div>
                        </div>
                    </div>
                </ChildContent>
            </RCard>

            <!-- RButton Component -->
            <RCard Variant="CardVariant.Outlined" Text="RButton">
                <ChildContent>
                    <RDivider Text="Button Component" 
                                     Subtitle="Professional button with enterprise variants and comprehensive features" 
                                     Icon="touch_app" />
                    
                    <div class="space-y-6">
                        <!-- Variants -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Variants</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButton Text="Primary" Variant="ButtonVariant.Primary" />
                                <RButton Text="Secondary" Variant="ButtonVariant.Secondary" />
                                <RButton Text="Success" Variant="ButtonVariant.Success" />
                                <RButton Text="Warning" Variant="ButtonVariant.Warning" />
                                <RButton Text="Danger" Variant="ButtonVariant.Danger" />
                                <RButton Text="Info" Variant="ButtonVariant.Info" />
                                <RButton Text="Outline" Variant="ButtonVariant.Outline" />
                                <RButton Text="Ghost" Variant="ButtonVariant.Ghost" />
                                <RButton Text="Glass" Variant="ButtonVariant.Glass" />
                            </div>
                        </div>

                        <!-- Sizes -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Sizes</div>
                            <div class="flex items-center gap-3">
                                <RButton Text="XS" Size="SizeType.ExtraSmall" />
                                <RButton Text="Small" Size="SizeType.Small" />
                                <RButton Text="Medium" Size="SizeType.Medium" />
                                <RButton Text="Large" Size="SizeType.Large" />
                                <RButton Text="XL" Size="SizeType.ExtraLarge" />
                            </div>
                        </div>

                        <!-- With Icons -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Icon Positions</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButton Text="Start Icon" Icon="add" IconPosition="IconPosition.Start" />
                                <RButton Text="End Icon" Icon="arrow_forward" IconPosition="IconPosition.End" />
                                <RButton Text="Top Icon" Icon="cloud_upload" IconPosition="IconPosition.Top" />
                                <RButton Text="Bottom Icon" Icon="cloud_download" IconPosition="IconPosition.Bottom" />
                            </div>
                        </div>

                        <!-- States -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">States</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButton Text="Normal" />
                                <RButton Text="Loading" Loading="true" LoadingText="Processing..." />
                                <RButton Text="Disabled" Disabled="true" />
                            </div>
                        </div>

                        <!-- Icon Only -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Icon Only Buttons</div>
                            <div class="flex items-center gap-3">
                                <RButton Icon="edit" Size="SizeType.Small" />
                                <RButton Icon="delete" Variant="ButtonVariant.Danger" />
                                <RButton Icon="settings" Variant="ButtonVariant.Ghost" />
                                <RButton Icon="more_vert" Variant="ButtonVariant.Outline" />
                            </div>
                        </div>
                    </div>
                </ChildContent>
            </RCard>

            <!-- Enhanced Button Features -->
            <RCard Variant="CardVariant.Outlined" Text="Enhanced Button Features">
                <ChildContent>
                    <RDivider Text="Advanced Button Features" 
                                     Subtitle="Modern button variants and special effects for premium UX" 
                                     Icon="auto_awesome" />
                    
                    <div class="space-y-6">
                        <!-- Special Effect Variants -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Special Effect Variants</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButton Text="Gradient" Variant="ButtonVariant.Gradient" />
                                <RButton Text="Neon" Variant="ButtonVariant.Neon" />
                                <RButton Text="Neumorphism" Variant="ButtonVariant.Neumorphism" />
                                <RButton Text="Shimmer" Variant="ButtonVariant.Shimmer" />
                                <RButton Text="Enterprise" Variant="ButtonVariant.Enterprise" />
                            </div>
                        </div>

                        <!-- Button Types -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Button Types</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButton Text="Default Button" />
                                <RButton Text="Submit Form" Type="ButtonType.Submit" />
                                <RButton Text="Reset Form" Type="ButtonType.Reset" />
                            </div>
                        </div>

                        <!-- Loading States -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Loading States</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButton Text="Processing" Loading="true" />
                                <RButton Text="Saving Changes" Loading="true" LoadingText="Saving..." />
                                <RButton Text="Custom Loading" Loading="true" LoadingText="Please wait..." />
                            </div>
                        </div>

                        <!-- Event Handling -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Event Handling Demonstrations</div>
                            <div class="space-y-4">
                                <div>
                                    <p class="text-sm text-muted mb-2">Click Counter Example</p>
                                    <div class="flex items-center gap-3">
                                        <RButton Text="@($"Clicked {_clickCount} times")" 
                                                @onclick="IncrementCounter" 
                                                Variant="ButtonVariant.Primary" />
                                        <RButton Text="Reset Counter" 
                                                @onclick="ResetCounter" 
                                                Variant="ButtonVariant.Secondary" />
                                    </div>
                                </div>
                                
                                <div>
                                    <p class="text-sm text-muted mb-2">Async Operation with Loading State</p>
                                    <RButton Text="@(_isProcessing ? "Processing..." : "Start Async Task")" 
                                            @onclick="HandleAsyncOperation" 
                                            Loading="@_isProcessing"
                                            Disabled="@_isProcessing"
                                            Variant="ButtonVariant.Success" />
                                </div>
                                
                                <div>
                                    <p class="text-sm text-muted mb-2">Confirmation Dialog Example</p>
                                    <RButton Text="Delete Item" 
                                            @onclick="HandleDeleteWithConfirmation" 
                                            Variant="ButtonVariant.Danger"
                                            Icon="delete" />
                                </div>
                                
                                <div>
                                    <p class="text-sm text-muted mb-2">Form Submission (Prevent Default)</p>
                                    <form @onsubmit="HandleFormSubmit" @onsubmit:preventDefault="true">
                                        <div class="flex items-center gap-3">
                                            <RButton Text="Submit Form" 
                                                    Type="ButtonType.Submit"
                                                    Variant="ButtonVariant.Primary" />
                                            <span class="text-sm">@_formMessage</span>
                                        </div>
                                    </form>
                                </div>
                                
                                <div>
                                    <p class="text-sm text-muted mb-2">Toggle State Example</p>
                                    <div class="flex items-center gap-3">
                                        <RButton Text="@(_isToggled ? "ON" : "OFF")" 
                                                @onclick="ToggleState"
                                                Variant="@(_isToggled ? ButtonVariant.Success : ButtonVariant.Secondary)"
                                                Icon="@(_isToggled ? "toggle_on" : "toggle_off")" />
                                        <span class="text-sm">Status: @(_isToggled ? "Active" : "Inactive")</span>
                                    </div>
                                </div>
                                
                                <div>
                                    <p class="text-sm text-muted mb-2">Event with Parameters</p>
