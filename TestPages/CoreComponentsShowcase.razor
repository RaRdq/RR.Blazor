                        <!-- With Icons -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Icon Positions</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButton Text="Start Icon" Icon="add" IconPosition="IconPosition.Start" />
                                <RButton Text="End Icon" Icon="arrow_forward" IconPosition="IconPosition.End" />
                                <RButton Text="Top Icon" Icon="cloud_upload" IconPosition="IconPosition.Top" />
                                <RButton Text="Bottom Icon" Icon="cloud_download" IconPosition="IconPosition.Bottom" />
                            </div>
                        </div>

                        <!-- States -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">States</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButton Text="Normal" />
                                <RButton Text="Loading" Loading="true" LoadingText="Processing..." />
                                <RButton Text="Disabled" Disabled="true" />
                            </div>
                        </div>

                        <!-- Icon Only -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Icon Only Buttons</div>
                            <div class="flex items-center gap-3">
                                <RButton Icon="edit" Size="ButtonSize.Small" />
                                <RButton Icon="delete" Variant="ButtonVariant.Danger" />
                                <RButton Icon="settings" Variant="ButtonVariant.Ghost" />
                                <RButton Icon="more_vert" Variant="ButtonVariant.Outline" />
                            </div>
                        </div>
                    </div>
                </ChildContent>
            </RCard>

            <!-- RButtonRefactored Component -->
            <RCard Variant="CardVariant.Outlined" Text="RButtonRefactored">
                <ChildContent>
                    <RSectionDivider Text="Button Refactored Component" 
                                     Subtitle="Enhanced button component with improved features and performance" 
                                     Icon="upgrade" />
                    
                    <div class="space-y-6">
                        <!-- Basic Usage -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Basic Usage</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButtonRefactored Text="Default Button" />
                                <RButtonRefactored Text="Submit Form" Type="ButtonType.Submit" />
                                <RButtonRefactored Text="Reset Form" Type="ButtonType.Reset" />
                            </div>
                        </div>

                        <!-- Icon Positions -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Icon Positions</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButtonRefactored Text="Start" Icon="start" IconPosition="IconPosition.Start" />
                                <RButtonRefactored Text="End" Icon="arrow_forward" IconPosition="IconPosition.End" />
                                <RButtonRefactored Text="Top" Icon="keyboard_arrow_up" IconPosition="IconPosition.Top" />
                                <RButtonRefactored Text="Bottom" Icon="keyboard_arrow_down" IconPosition="IconPosition.Bottom" />
                            </div>
                        </div>

                        <!-- Loading States -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Loading States</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButtonRefactored Text="Processing" Loading="true" />
                                <RButtonRefactored Text="Saving Changes" Loading="true" LoadingText="Saving..." />
                                <RButtonRefactored Text="Custom Loading" Loading="true" LoadingText="Please wait..." />
                            </div>
                        </div>

                        <!-- Event Handling -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Event Handling</div>
                            <div class="flex items-center gap-3 flex-wrap">
                                <RButtonRefactored Text="Stop Propagation" StopPropagation="true" />
                                <RButtonRefactored Text="Prevent Default" PreventDefault="true" />
                                <RButtonRefactored Text="Both" StopPropagation="true" PreventDefault="true" />
                            </div>
                        </div>
                    </div>
                </ChildContent>
            </RCard>

            <!-- RCard Component -->
            <RCard Variant="CardVariant.Outlined" Text="RCard">
                <ChildContent>
                    <RSectionDivider Text="Card Component" 
                                     Subtitle="Professional card for content containers with business-grade variants" 
                                     Icon="credit_card" />
                    
                    <div class="space-y-6">
                        <!-- Variants -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Variants</div>
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                <RCard Variant="CardVariant.Default" Text="Default Card" Content="Standard card with default styling" />
                                <RCard Variant="CardVariant.Outlined" Text="Outlined Card" Content="Card with border outline" />
                                <RCard Variant="CardVariant.Elevated" Text="Elevated Card" Content="Card with shadow elevation" />
                                <RCard Variant="CardVariant.Glass" Text="Glass Card" Content="Modern glassmorphism effect" />
                                <RCard Variant="CardVariant.Flat" Text="Flat Card" Content="Minimalist flat design" />
                            </div>
                        </div>

                        <!-- With Icons -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Cards with Icons</div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <RCard Text="User Profile" 
                                       Subtitle="Manage your account" 
                                       Content="Update your personal information and preferences" 
                                       Icon="person" />
                                <RCard Text="Analytics Dashboard" 
                                       Subtitle="View your metrics" 
                                       Content="Comprehensive analytics and reporting tools" 
                                       Icon="analytics" />
                            </div>
                        </div>

                        <!-- Interactive Cards -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Interactive Cards</div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <RCard Text="Clickable Card" 
                                       Content="This card responds to clicks and hover" 
                                       Icon="touch_app" 
                                       Clickable="true" />
                                <RCard Text="Loading Card" 
                                       Content="Card in loading state" 
                                       Icon="hourglass_empty" 
                                       Loading="true" />
                            </div>
                        </div>

