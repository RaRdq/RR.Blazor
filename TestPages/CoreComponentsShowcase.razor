                        <!-- With Badges -->
                        <div class="space-y-2">
                            <div class="text-h6 font-semibold">Badge Notifications</div>
                            <div class="flex items-center gap-4">
                                <RAvatar Text="B1" ShowBadge="true" BadgeCount="3" />
                                <RAvatar Text="B2" ShowBadge="true" BadgeCount="15" />
                                <RAvatar Text="B3" ShowBadge="true" BadgeCount="99" />
