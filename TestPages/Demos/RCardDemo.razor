@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums
@using RR.Blazor.TestPages.Demos.Components

<div class="relative">
    <GitHubLinkButton FileName="RCardDemo.razor" />
    <RCard Variant="CardVariant.Outlined" Text="RCard">
    <ChildContent>
        <RDivider Text="Card Component" class="mb-2"
                         Subtitle="Professional card for content containers with business-grade variants" 
                         Icon="credit_card" />
        
        <div class="space-y-6">
            <!-- Variants -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Variants</div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-4 overflow-visible">
                    <RCard Variant="CardVariant.Default" Text="Default Card" Content="Standard card with default styling" />
                    <RCard Variant="CardVariant.Outlined" Text="Outlined Card" Content="Card with border outline" />
                    <RCard Variant="CardVariant.Elevated" Text="Elevated Card" Content="Card with shadow elevation" />
                    <RCard Variant="CardVariant.Glass" Text="Glass Card" Content="Modern glassmorphism effect" />
                    <RCard Variant="CardVariant.Flat" Text="Flat Card" Content="Minimalist flat design" />
                </div>
            </div>

            <!-- New Gradient Glassmorphism Variants -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Gradient Glassmorphism Variants âœ¨</div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-4 overflow-visible">
                    <RCard Variant="CardVariant.Gradient" Text="Gradient Card" 
                           Content="Solid gradient background with modern appeal" 
                           Icon="gradient" />
                    <RCard Variant="CardVariant.GlassGradient" Text="Glass Gradient" 
                           Content="Premium glassmorphism with gradient overlay" 
                           Icon="auto_awesome" />
                    <RCard Variant="CardVariant.GlassGradient" Text="Premium Feature" 
                           Icon="star" 
                           Class="glass-gradient-warning">
                        <ChildContent>
                            <p>Lifetime Access - Never pay again!</p>
                            <ul class="list-disc list-inside mt-2 text-sm">
                                <li>Unlimited features</li>
                                <li>Priority support</li>
                                <li>Early access</li>
                            </ul>
                        </ChildContent>
                    </RCard>
                </div>
            </div>

            <!-- Card Style Combinations -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Card Style Combinations</div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-4 overflow-visible">
                    <RCard Variant="CardVariant.Outlined" 
                           Text="Outlined Card" 
                           Content="Clean outlined style with primary color"
                           Icon="border_style"
                           Class="outlined" />
                    <RCard Variant="CardVariant.Glass" 
                           Text="Glass Success" 
                           Content="Glass effect with success theme"
                           Icon="check_circle"
                           Class="glass-success" />
                    <RCard Variant="CardVariant.Elevated" 
                           Text="Elevated Card" 
                           Content="High elevation for important content"
                           Icon="layers"
                           Elevation="3" />
                    <RCard Variant="CardVariant.Flat" 
                           Text="Flat Design" 
                           Content="Minimalist flat style"
                           Icon="view_compact" />
                    <RCard Variant="CardVariant.GlassGradient" 
                           Text="Premium Glass" 
                           Content="Glass gradient with info theme"
                           Icon="auto_awesome"
                           Class="glass-gradient-info" />
                    <RCard Variant="CardVariant.Default" 
                           Text="Loading State" 
                           Content="Card with shimmer loading animation"
                           Loading="true"
                           Icon="hourglass_empty" />
                </div>
            </div>

            <!-- Semantic Glass Gradient Examples -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Semantic Glass Gradients</div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 pa-4">
                    <div class="card card-glass-gradient">
                        <div class="card-header">
                            <i class="icon text-2xl">rocket_launch</i>
                            <div class="card-title">Primary Glass</div>
                        </div>
                        <div class="card-body">Premium primary gradient with glass effect</div>
                    </div>
                    <div class="card card-glass-gradient-success">
                        <div class="card-header">
                            <i class="icon text-2xl">check_circle</i>
                            <div class="card-title">Success Glass</div>
                        </div>
                        <div class="card-body">Achievement unlocked with style</div>
                    </div>
                    <div class="card card-glass-gradient-warning">
                        <div class="card-header">
                            <i class="icon text-2xl">priority_high</i>
                            <div class="card-title">Warning Glass</div>
                        </div>
                        <div class="card-body">Important notification with gradient</div>
                    </div>
                    <div class="card card-glass-gradient-error">
                        <div class="card-header">
                            <i class="icon text-2xl">error</i>
                            <div class="card-title">Error Glass</div>
                        </div>
                        <div class="card-body">Critical alert with premium styling</div>
                    </div>
                    <div class="card card-glass-gradient-info">
                        <div class="card-header">
                            <i class="icon text-2xl">info</i>
                            <div class="card-title">Info Glass</div>
                        </div>
                        <div class="card-body">Informational content with elegance</div>
                    </div>
                </div>
            </div>

            <!-- With Icons -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Cards with Icons</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pa-2">
                    <RCard Text="User Profile" 
                           Subtitle="Manage your account" 
                           Content="Update your personal information and preferences" 
                           Icon="person" />
                    <RCard Text="Analytics Dashboard" 
                           Subtitle="View your metrics" 
                           Content="Comprehensive analytics and reporting tools" 
                           Icon="analytics" />
                </div>
            </div>

            <!-- Interactive Cards -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Interactive Cards</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pa-2">
                    <RCard Text="Clickable Card" 
                           Content="This card responds to clicks and hover" 
                           Icon="touch_app" 
                           Clickable="true" />
                    <RCard Text="Loading Card" 
                           Content="Card in loading state" 
                           Icon="hourglass_empty" 
                           Loading="true" />
                </div>
            </div>

            <!-- Density Variations -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Density Options</div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <RCard Text="Compact" Content="Ultra-compact layout" Density="DensityType.Compact" />
                    <RCard Text="Dense" Content="Dense layout option" Density="DensityType.Dense" />
                    <RCard Text="Normal" Content="Standard spacing" Density="DensityType.Normal" />
                    <RCard Text="Spacious" Content="Generous spacing" Density="DensityType.Spacious" />
                </div>
            </div>
        </div>
    </ChildContent>
</RCard>
</div>