@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums

<RCard Variant="CardVariant.Outlined" Text="RChip">
    <ChildContent>
        <RDivider Text="Chip Component" 
                         Subtitle="Professional chip for tags, filters, and selections" 
                         Icon="label" />
        
        <div class="space-y-6">
            <!-- Variants -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Variants</div>
                <div class="flex items-center gap-3 flex-wrap">
                    <RChip Text="Default" />
                    <RChip Text="Primary" Variant="VariantType.Primary" />
                    <RChip Text="Secondary" Variant="VariantType.Secondary" />
                    <RChip Text="Success" Variant="VariantType.Success" />
                    <RChip Text="Warning" Variant="VariantType.Warning" />
                    <RChip Text="Danger" Variant="VariantType.Error" />
                    <RChip Text="Info" Variant="VariantType.Info" />
                </div>
            </div>

            <!-- Sizes -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Sizes</div>
                <div class="flex items-center gap-3">
                    <RChip Text="Small" Size="SizeType.Small" />
                    <RChip Text="Medium" Size="SizeType.Medium" />
                    <RChip Text="Large" Size="SizeType.Large" />
                </div>
            </div>

            <!-- With Icons -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">With Icons</div>
                <div class="flex items-center gap-3 flex-wrap">
                    <RChip Text="Featured" Icon="star" Variant="VariantType.Primary" />
                    <RChip Text="Verified" Icon="verified" Variant="VariantType.Success" />
                    <RChip Text="Premium" Icon="diamond" Variant="VariantType.Warning" />
                    <RChip Text="Alert" Icon="warning" Variant="VariantType.Error" />
                    <RChip Text="Info" Icon="info" Variant="VariantType.Info" />
                </div>
            </div>

            <!-- States -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">States</div>
                <div class="flex items-center gap-3 flex-wrap">
                    <RChip Text="Normal" />
                    <RChip Text="Disabled" Disabled="true" />
                </div>
            </div>

            <!-- Tag Examples -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Tag Examples</div>
                <div class="flex items-center gap-2 flex-wrap">
                    <RChip Text="JavaScript" Variant="VariantType.Info" />
                    <RChip Text="React" Variant="VariantType.Primary" />
                    <RChip Text="Blazor" Variant="VariantType.Success" />
                    <RChip Text="TypeScript" Variant="VariantType.Secondary" />
                    <RChip Text="CSS" Variant="VariantType.Warning" />
                    <RChip Text="HTML" Variant="VariantType.Error" />
                </div>
            </div>
        </div>
    </ChildContent>
</RCard>