@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Form
@using RR.Blazor.Enums
@using RR.Blazor.TestPages.Demos.Components

<div class="relative">
    <GitHubLinkButton FileName="RToggleDemo.razor" />
    <RCard Variant="CardVariant.Outlined" Text="RToggle">
    <ChildContent>
        <RDivider Text="Toggle Component" 
                  Subtitle="Professional toggle switches for boolean states with semantic variants"
                  Icon="toggle_on" />
        
        <div class="space-y-6">
            <!-- Basic Examples -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Basic Examples</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="flex items-center">
                        <RToggle @bind-Value="_basicToggle" Text="Basic toggle" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_iconToggle" Text="With icon" Icon="star" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_descriptionToggle" 
                                Text="With description"
                                Description="Additional context information" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_disabledToggle" 
                                Text="Disabled state" 
                                Disabled="true" />
                    </div>
                </div>
            </div>

            <!-- Variants -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Variants</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="flex items-center">
                        <RToggle @bind-Value="_standardVariant" 
                                Text="Standard variant" 
                                Variant="ToggleVariant.Standard" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_primaryVariant" 
                                Text="Primary variant" 
                                Variant="ToggleVariant.Primary" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_successVariant" 
                                Text="Success variant" 
                                Variant="ToggleVariant.Success" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_warningVariant" 
                                Text="Warning variant" 
                                Variant="ToggleVariant.Warning" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_errorVariant" 
                                Text="Error variant" 
                                Variant="ToggleVariant.Error" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_infoVariant" 
                                Text="Info variant" 
                                Variant="ToggleVariant.Info" />
                    </div>
                </div>
            </div>

            <!-- Sizes -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Sizes</div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="flex items-center">
                        <RToggle @bind-Value="_smallSize" 
                                Text="Small size" 
                                Size="SizeType.Small" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_mediumSize" 
                                Text="Medium size" 
                                Size="SizeType.Medium" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_largeSize" 
                                Text="Large size" 
                                Size="SizeType.Large" />
                    </div>
                </div>
            </div>

            <!-- Interactive Examples -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Interactive Examples</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="flex items-center">
                        <RToggle @bind-Value="_stateIconToggle" 
                                Text="State icons" 
                                ShowStateIcons="true" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_labelStartToggle" 
                                Text="Label start" 
                                LabelPosition="IconPosition.Start" />
                    </div>
                    
                    <div class="flex items-center">
                        <RToggle @bind-Value="_validationToggle" 
                                Text="Required field" 
                                ValidationMessage="@(_validationToggle ? "" : "This field is required")" />
                    </div>
                </div>
            </div>

            <!-- Current State Display -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Current States</div>
                <RCard Variant="CardVariant.Glass" Class="p-4">
                    <ChildContent>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                            <div>Basic: @_basicToggle</div>
                            <div>Primary: @_primaryVariant</div>
                            <div>Success: @_successVariant</div>
                            <div>Warning: @_warningVariant</div>
                            <div>Error: @_errorVariant</div>
                            <div>Info: @_infoVariant</div>
                            <div>With Icons: @_stateIconToggle</div>
                            <div>Validation: @_validationToggle</div>
                        </div>
                    </ChildContent>
                </RCard>
            </div>
        </div>
    </ChildContent>
</RCard>

@code {
    // Basic examples
    private bool _basicToggle = false;
    private bool _iconToggle = true;
    private bool _descriptionToggle = false;
    private bool _disabledToggle = true;

    // Variants
    private bool _standardVariant = false;
    private bool _primaryVariant = true;
    private bool _successVariant = true;
    private bool _warningVariant = false;
    private bool _errorVariant = false;
    private bool _infoVariant = true;

    // Sizes
    private bool _smallSize = true;
    private bool _mediumSize = false;
    private bool _largeSize = true;

    // Interactive
    private bool _stateIconToggle = true;
    private bool _labelStartToggle = false;
    private bool _validationToggle = false;
}
</div>