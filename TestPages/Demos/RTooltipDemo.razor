@page "/demo/tooltip"
@using RR.Blazor.Enums
@using RR.Blazor.TestPages.Demos.Components

<div class="relative">
    <GitHubLinkButton FileName="RTooltipDemo.razor" />
    <h3>RTooltip Demo</h3>

<div class="demo-section">
    <h4>Basic Tooltips</h4>
    <div class="demo-row">
        <RTooltip Text="This is a basic tooltip">
            <button class="btn btn-primary">Hover for tooltip</button>
        </RTooltip>
    </div>
    
    <h4>Tooltip Positions</h4>
    <div class="demo-grid">
        <RTooltip Text="Top tooltip" Position="TooltipPosition.Top">
            <button class="btn btn-secondary">Top</button>
        </RTooltip>
        
        <RTooltip Text="Bottom tooltip" Position="TooltipPosition.Bottom">
            <button class="btn btn-secondary">Bottom</button>
        </RTooltip>
        
        <RTooltip Text="Left tooltip" Position="TooltipPosition.Left">
            <button class="btn btn-secondary">Left</button>
        </RTooltip>
        
        <RTooltip Text="Right tooltip" Position="TooltipPosition.Right">
            <button class="btn btn-secondary">Right</button>
        </RTooltip>
    </div>
    
    <h4>Tooltip Variants</h4>
    <div class="demo-row">
        <RTooltip Text="Default tooltip" Variant="TooltipVariant.Default">
            <button class="btn btn-outline-primary">Default</button>
        </RTooltip>
        
        <RTooltip Text="Dark tooltip" Variant="TooltipVariant.Dark">
            <button class="btn btn-outline-secondary">Dark</button>
        </RTooltip>
        
        <RTooltip Text="Light tooltip" Variant="TooltipVariant.Ghost">
            <button class="btn btn-outline-info">Light</button>
        </RTooltip>
    </div>
</div>

<style>
    .demo-section {
        margin-bottom: 2rem;
    }
    
    .demo-row {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
        flex-wrap: wrap;
    }
    
    .demo-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }
</style>
</div>