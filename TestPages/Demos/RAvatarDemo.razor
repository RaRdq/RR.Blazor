@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums
@using RR.Blazor.TestPages.Demos.Components

<div class="relative">
    <GitHubLinkButton FileName="RAvatarDemo.razor" />
    <RCard Variant="CardVariant.Outlined" Text="RAvatar">
    <ChildContent>
        <RDivider Text="Avatar Component" 
                         Subtitle="Professional avatar for user representation with status indicators" 
                         Icon="person" />
        
        <div class="space-y-6">
            <!-- Sizes -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Sizes</div>
                <div class="avatars-normal">
                    <RAvatar Size="SizeType.ExtraSmall" Text="XS" />
                    <RAvatar Size="SizeType.Small" Text="SM" />
                    <RAvatar Size="SizeType.Medium" Text="MD" />
                    <RAvatar Size="SizeType.Large" Text="LG" />
                    <RAvatar Size="SizeType.ExtraLarge" Text="XL" />
                    <RAvatar Size="SizeType.ExtraLarge2X" Text="2XL" />
                </div>
            </div>

            <!-- Variants -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Variants</div>
                <div class="avatars-normal">
                    <RAvatar Variant="AvatarVariant.Default" Text="DF" />
                    <RAvatar Variant="AvatarVariant.Primary" Text="PR" />
                    <RAvatar Variant="AvatarVariant.Success" Text="SC" />
                    <RAvatar Variant="AvatarVariant.Warning" Text="WR" />
                    <RAvatar Variant="AvatarVariant.Error" Text="ER" />
                    <RAvatar Variant="AvatarVariant.Gradient" Text="GR" />
                </div>
            </div>

            <!-- Density Options -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Density Options</div>
                <div class="space-y-3">
                    <div>
                        <p class="text-sm text-muted mb-2">Compact Spacing</p>
                        <div class="avatars-compact">
                            <RAvatar Text="A1" Variant="AvatarVariant.Primary" />
                            <RAvatar Text="B2" Variant="AvatarVariant.Success" />
                            <RAvatar Text="C3" Variant="AvatarVariant.Warning" />
                            <RAvatar Text="D4" Variant="AvatarVariant.Error" />
                        </div>
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Normal Spacing</p>
                        <div class="avatars-normal">
                            <RAvatar Text="A1" Variant="AvatarVariant.Primary" />
                            <RAvatar Text="B2" Variant="AvatarVariant.Success" />
                            <RAvatar Text="C3" Variant="AvatarVariant.Warning" />
                            <RAvatar Text="D4" Variant="AvatarVariant.Error" />
                        </div>
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Spacious Layout</p>
                        <div class="avatars-spacious">
                            <RAvatar Text="A1" Variant="AvatarVariant.Primary" />
                            <RAvatar Text="B2" Variant="AvatarVariant.Success" />
                            <RAvatar Text="C3" Variant="AvatarVariant.Warning" />
                            <RAvatar Text="D4" Variant="AvatarVariant.Error" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- With Status -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Status Indicators</div>
                <div class="space-y-3">
                    <div>
                        <p class="text-sm text-muted mb-2">Different Sizes with Status</p>
                        <div class="avatars-normal">
                            <RAvatar Size="SizeType.Small" Text="SM" ShowStatus="true" Status="AvatarStatus.Online" />
                            <RAvatar Size="SizeType.Medium" Text="MD" ShowStatus="true" Status="AvatarStatus.Away" />
                            <RAvatar Size="SizeType.Large" Text="LG" ShowStatus="true" Status="AvatarStatus.Busy" />
                            <RAvatar Size="SizeType.ExtraLarge" Text="XL" ShowStatus="true" Status="AvatarStatus.Offline" />
                        </div>
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Status Types</p>
                        <div class="avatars-spacious">
                            <RAvatar Text="ON" ShowStatus="true" Status="AvatarStatus.Online" Variant="AvatarVariant.Success" />
                            <RAvatar Text="AW" ShowStatus="true" Status="AvatarStatus.Away" Variant="AvatarVariant.Warning" />
                            <RAvatar Text="BY" ShowStatus="true" Status="AvatarStatus.Busy" Variant="AvatarVariant.Error" />
                            <RAvatar Text="OF" ShowStatus="true" Status="AvatarStatus.Offline" Variant="AvatarVariant.Default" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- With Badges -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Badge Notifications</div>
                <div class="space-y-3">
                    <div>
                        <p class="text-sm text-muted mb-2">Badge Scaling with Size</p>
                        <div class="avatars-normal">
                            <RAvatar Size="SizeType.Small" Text="SM" ShowBadge="true" BadgeCount="3" />
                            <RAvatar Size="SizeType.Medium" Text="MD" ShowBadge="true" BadgeCount="15" />
                            <RAvatar Size="SizeType.Large" Text="LG" ShowBadge="true" BadgeCount="99" />
                            <RAvatar Size="SizeType.ExtraLarge" Text="XL" ShowBadge="true" BadgeCount="150" />
                        </div>
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Different Badge Counts</p>
                        <div class="avatars-spacious">
                            <RAvatar Text="B1" ShowBadge="true" BadgeCount="3" Variant="AvatarVariant.Primary" />
                            <RAvatar Text="B2" ShowBadge="true" BadgeCount="15" Variant="AvatarVariant.Success" />
                            <RAvatar Text="B3" ShowBadge="true" BadgeCount="99" Variant="AvatarVariant.Warning" />
                            <RAvatar Text="B4" ShowBadge="true" BadgeCount="150" Variant="AvatarVariant.Error" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- With Icons -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Icon Avatars</div>
                <div class="space-y-3">
                    <div>
                        <p class="text-sm text-muted mb-2">Icon Size Scaling</p>
                        <div class="avatars-normal">
                            <RAvatar Size="SizeType.Small" Icon="person" />
                            <RAvatar Size="SizeType.Medium" Icon="account_circle" Variant="AvatarVariant.Primary" />
                            <RAvatar Size="SizeType.Large" Icon="face" Variant="AvatarVariant.Success" />
                            <RAvatar Size="SizeType.ExtraLarge" Icon="group" Variant="AvatarVariant.Warning" />
                            <RAvatar Size="SizeType.ExtraLarge2X" Icon="star" Variant="AvatarVariant.Gradient" />
                        </div>
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Different Icon Types</p>
                        <div class="avatars-spacious">
                            <RAvatar Icon="person" Variant="AvatarVariant.Default" />
                            <RAvatar Icon="account_circle" Variant="AvatarVariant.Primary" />
                            <RAvatar Icon="face" Variant="AvatarVariant.Success" />
                            <RAvatar Icon="group" Variant="AvatarVariant.Warning" />
                            <RAvatar Icon="star" Variant="AvatarVariant.Gradient" />
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Avatar Groups -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Avatar Groups</div>
                <div class="space-y-3">
                    <div>
                        <p class="text-sm text-muted mb-2">Default Group</p>
                        <div class="avatar-group">
                            <RAvatar Text="AB" Variant="AvatarVariant.Primary" />
                            <RAvatar Text="CD" Variant="AvatarVariant.Success" />
                            <RAvatar Text="EF" Variant="AvatarVariant.Warning" />
                            <RAvatar Text="GH" Variant="AvatarVariant.Error" />
                            <RAvatar Text="+5" Class="avatar-group-more" />
                        </div>
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Compact Group</p>
                        <div class="avatar-group avatar-group-compact">
                            <RAvatar Text="AB" Variant="AvatarVariant.Primary" />
                            <RAvatar Text="CD" Variant="AvatarVariant.Success" />
                            <RAvatar Text="EF" Variant="AvatarVariant.Warning" />
                            <RAvatar Text="GH" Variant="AvatarVariant.Error" />
                            <RAvatar Text="+8" Class="avatar-group-more" />
                        </div>
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Separated Group</p>
                        <div class="avatar-group avatar-group-separated">
                            <RAvatar Text="AB" Variant="AvatarVariant.Primary" />
                            <RAvatar Text="CD" Variant="AvatarVariant.Success" />
                            <RAvatar Text="EF" Variant="AvatarVariant.Warning" />
                            <RAvatar Text="GH" Variant="AvatarVariant.Error" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </ChildContent>
</RCard>
</div>