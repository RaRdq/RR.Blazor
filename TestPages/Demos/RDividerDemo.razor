@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums
@using RR.Blazor.TestPages.Demos.Components

<div class="relative">
    <GitHubLinkButton FileName="RDividerDemo.razor" />
    <RCard Variant="CardVariant.Outlined" Text="RDivider">
    <ChildContent>
        <RDivider Text="Divider Component" 
                         Subtitle="Professional divider for visual separation with text support" 
                         Icon="remove" />
        
        <div class="space-y-6">
            <!-- Basic Dividers -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Basic Dividers</div>
                <div class="space-y-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Horizontal Solid</p>
                        <RDivider />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Horizontal Dashed</p>
                        <RDivider DividerStyle="DividerStyle.Dashed" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Horizontal Dotted</p>
                        <RDivider DividerStyle="DividerStyle.Dotted" />
                    </div>
                </div>
            </div>

            <!-- With Text -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Dividers with Text</div>
                <div class="space-y-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Center Aligned</p>
                        <RDivider Text="Settings" TextAlign="DividerTextAlign.Center" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Left Aligned</p>
                        <RDivider Text="Personal Information" TextAlign="DividerTextAlign.Left" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Right Aligned</p>
                        <RDivider Text="Advanced Options" TextAlign="DividerTextAlign.Right" />
                    </div>
                </div>
            </div>

            <!-- Vertical Dividers -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Vertical Dividers</div>
                <div class="flex items-center gap-4 h-12">
                    <span>Item 1</span>
                    <RDivider Variant="DividerVariant.Vertical" />
                    <span>Item 2</span>
                    <RDivider Variant="DividerVariant.Vertical" DividerStyle="DividerStyle.Dashed" />
                    <span>Item 3</span>
                    <RDivider Variant="DividerVariant.Vertical" DividerStyle="DividerStyle.Dotted" />
                    <span>Item 4</span>
                </div>
            </div>

            <!-- Dividers with Icons -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Dividers with Icons</div>
                <div class="space-y-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Icon Only</p>
                        <RDivider Icon="star" IconSize="SizeType.Medium" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Icon with Text</p>
                        <RDivider Text="Featured" Icon="star" IconSize="SizeType.Small" SemanticVariant="primary" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Different Icon Sizes</p>
                        <RDivider Icon="circle" IconSize="SizeType.ExtraSmall" />
                        <RDivider Icon="circle" IconSize="SizeType.Small" />
                        <RDivider Icon="circle" IconSize="SizeType.Medium" />
                        <RDivider Icon="circle" IconSize="SizeType.Large" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Filled Icon Style</p>
                        <RDivider Icon="favorite" IconStyle="filled" SemanticVariant="error" />
                    </div>
                </div>
            </div>

            <!-- Semantic Variants -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Semantic Color Variants</div>
                <div class="space-y-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Default</p>
                        <RDivider Text="Account Settings" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Primary - Key Sections</p>
                        <RDivider Text="Dashboard Overview" SemanticVariant="primary" Icon="dashboard" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Success - Completed Sections</p>
                        <RDivider Text="Profile Complete" SemanticVariant="success" Icon="check_circle" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Warning - Review Required</p>
                        <RDivider Text="Pending Approval" SemanticVariant="warning" Icon="pending_actions" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Error - Issues Found</p>
                        <RDivider Text="Validation Errors" SemanticVariant="error" Icon="error" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Info - Additional Information</p>
                        <RDivider Text="System Information" SemanticVariant="info" Icon="info" />
                    </div>
                </div>
            </div>

            <!-- Size Variants and Spacing -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Size Variants & Spacing</div>
                <div class="space-y-6">
                    <div>
                        <p class="text-sm text-muted mb-2">Compact - For Dense Layouts</p>
                        <RDivider Text="Quick Settings" 
                                  Size="SizeType.Small" 
                                  Icon="tune" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Default - Standard Spacing</p>
                        <RDivider Text="Account Settings" 
                                  Size="SizeType.Medium" 
                                  Icon="account_circle" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Spacious - For Important Sections</p>
                        <RDivider Text="Security Settings" 
                                  Size="SizeType.Large" 
                                  Icon="security" 
                                  SemanticVariant="primary" />
                    </div>
                </div>
            </div>

            <!-- Advanced Features -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Advanced Features</div>
                <div class="space-y-4">
                    <div>
                        <p class="text-sm text-muted mb-2">With Subtitle</p>
                        <RDivider Text="Performance Metrics" 
                                  Subtitle="Last updated 5 minutes ago"
                                  Icon="analytics" 
                                  SemanticVariant="info" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">No Line (Title Only)</p>
                        <RDivider Text="Section Header" 
                                  ShowLine="false"
                                  Icon="title" 
                                  Size="SizeType.Large" />
                    </div>
                    <div>
                        <p class="text-sm text-muted mb-2">Custom Child Content</p>
                        <RDivider Icon="business">
                            <ChildContent>
                                <span class="font-bold">Company Dashboard</span>
                                <RChip StyleVariant="ChipStyle.Badge" Text="New" SemanticVariant="success" Size="SizeType.Small"  />
                            </ChildContent>
                        </RDivider>
                    </div>
                </div>
            </div>
        </div>
    </ChildContent>
</RCard>
</div>