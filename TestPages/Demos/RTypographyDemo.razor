@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Display
@using RR.Blazor.Enums

<RCard Variant="CardVariant.Outlined" Text="Typography System">
    <ChildContent>
        <RDivider Text="RR.Blazor Typography Showcase"
                  Subtitle="Complete typography system with headings, body text, utility classes, and professional styling"
                  Icon="text_fields" />
        
        <div class="space-y-6">
            <!-- Headings -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Heading Hierarchy</div>
                <div class="space-y-4">
                    <div class="space-y-3">
                        <div class="text-h1">Heading 1 (text-h1)</div>
                        <div class="text-h2">Heading 2 (text-h2)</div>
                        <div class="text-h3">Heading 3 (text-h3)</div>
                        <div class="text-h4">Heading 4 (text-h4)</div>
                        <div class="text-h5">Heading 5 (text-h5)</div>
                        <div class="text-h6">Heading 6 (text-h6)</div>
                    </div>
                </div>
            </div>

            <!-- Font Sizes -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Font Size Scale</div>
                <div class="space-y-3">
                    <div class="text-2xs">Extra extra small text (text-2xs)</div>
                    <div class="text-xs">Extra small text (text-xs)</div>
                    <div class="text-sm">Small text (text-sm)</div>
                    <div class="text-base">Base text size (text-base)</div>
                    <div class="text-lg">Large text (text-lg)</div>
                    <div class="text-xl">Extra large text (text-xl)</div>
                    <div class="text-2xl">2x large text (text-2xl)</div>
                    <div class="text-3xl">3x large text (text-3xl)</div>
                    <div class="text-4xl">4x large text (text-4xl)</div>
                    <div class="text-5xl">5x large text (text-5xl)</div>
                </div>
            </div>

            <!-- Font Weights -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Font Weights</div>
                <div class="space-y-3">
                    <div class="font-thin">Thin weight text (font-thin)</div>
                    <div class="font-extralight">Extra light weight (font-extralight)</div>
                    <div class="font-light">Light weight text (font-light)</div>
                    <div class="font-normal">Normal weight text (font-normal)</div>
                    <div class="font-medium">Medium weight text (font-medium)</div>
                    <div class="font-semibold">Semibold weight text (font-semibold)</div>
                    <div class="font-bold">Bold weight text (font-bold)</div>
                    <div class="font-extrabold">Extra bold weight (font-extrabold)</div>
                    <div class="font-black">Black weight text (font-black)</div>
                </div>
            </div>

            <!-- Text Colors -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Text Colors</div>
                <div class="space-y-3">
                    <div class="text-primary">Primary text color (text-primary)</div>
                    <div class="text-secondary">Secondary text color (text-secondary)</div>
                    <div class="text-tertiary">Tertiary text color (text-tertiary)</div>
                    <div class="text-muted">Muted text color (text-muted)</div>
                    <div class="text-disabled">Disabled text color (text-disabled)</div>
                    <div class="text-interactive">Interactive text color (text-interactive)</div>
                    
                    <div class="text-success">Success text color (text-success)</div>
                    <div class="text-warning">Warning text color (text-warning)</div>
                    <div class="text-error">Error text color (text-error)</div>
                    <div class="text-info">Info text color (text-info)</div>
                </div>
            </div>

            <!-- Body Text Styles -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Body Text Styles</div>
                <div class="space-y-4">
                    <div class="text-body-1">
                        Body 1 style (text-body-1): This is the primary body text style used for most content. 
                        It provides excellent readability and is perfect for articles, descriptions, and general content.
                    </div>
                    <div class="text-body-2">
                        Body 2 style (text-body-2): This is a smaller body text style, perfect for captions, 
                        secondary information, and supporting text that needs less visual prominence.
                    </div>
                    <div class="text-caption">
                        Caption style (text-caption): Used for image captions, form helper text, and other small supporting text.
                    </div>
                    <div class="text-overline">
                        Overline style (text-overline): Used for section labels and category headers
                    </div>
                </div>
            </div>

            <!-- Text Alignment -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Text Alignment</div>
                <div class="space-y-3">
                    <div class="text-left">Left aligned text (text-left)</div>
                    <div class="text-center">Center aligned text (text-center)</div>
                    <div class="text-right">Right aligned text (text-right)</div>
                    <div class="text-justify">Justified text alignment (text-justify) - This text will be justified to fill the entire width of the container, creating even spacing between words.</div>
                </div>
            </div>

            <!-- Text Transformations -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Text Transformations</div>
                <div class="space-y-3">
                    <div class="text-transform-uppercase">Uppercase text transformation</div>
                    <div class="text-transform-lowercase">LOWERCASE TEXT TRANSFORMATION</div>
                    <div class="text-transform-capitalize">capitalize each word transformation</div>
                    <div class="text-transform-none">Normal text with no transformation</div>
                </div>
            </div>

            <!-- Text Decorations -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Text Decorations</div>
                <div class="space-y-3">
                    <div class="text-decoration-none">No text decoration</div>
                    <div class="text-decoration-underline">Underlined text decoration</div>
                    <div class="text-decoration-line-through">Line-through text decoration</div>
                </div>
            </div>

            <!-- Line Height -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Line Height Variations</div>
                <div class="space-y-4">
                    <div class="leading-tight">
                        Tight line height (leading-tight): This paragraph demonstrates tight line spacing. 
                        The lines are closer together, creating a more compact appearance. This is useful for 
                        headlines or when space is limited.
                    </div>
                    <div class="leading-normal">
                        Normal line height (leading-normal): This paragraph uses normal line spacing, which provides 
                        a good balance between readability and space efficiency. This is the default and most 
                        commonly used line height for body text.
                    </div>
                    <div class="leading-relaxed">
                        Relaxed line height (leading-relaxed): This paragraph has increased line spacing, creating 
                        more breathing room between lines. This improves readability for longer texts and creates 
                        a more open, airy feeling.
                    </div>
                </div>
            </div>

            <!-- Letter Spacing -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Letter Spacing</div>
                <div class="space-y-3">
                    <div class="tracking-tighter">Tighter letter spacing (tracking-tighter)</div>
                    <div class="tracking-tight">Tight letter spacing (tracking-tight)</div>
                    <div class="tracking-normal">Normal letter spacing (tracking-normal)</div>
                    <div class="tracking-wide">Wide letter spacing (tracking-wide)</div>
                    <div class="tracking-wider">Wider letter spacing (tracking-wider)</div>
                    <div class="tracking-widest">Widest letter spacing (tracking-widest)</div>
                </div>
            </div>

            <!-- Text Utilities -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Text Utilities</div>
                <div class="space-y-3">
                    <div class="text-truncate" style="width: 200px; border: 1px solid var(--color-border); padding: 8px;">
                        This text will be truncated with an ellipsis (text-truncate)
                    </div>
                    
                    <div class="line-clamp-2" style="width: 300px; border: 1px solid var(--color-border); padding: 8px;">
                        This is a longer paragraph that demonstrates the line-clamp-2 utility. 
                        It will be limited to exactly two lines, and any overflow will be hidden 
                        with an ellipsis at the end of the second line.
                    </div>
                    
                    <div class="whitespace-nowrap" style="width: 200px; border: 1px solid var(--color-border); padding: 8px;">
                        This text will not wrap to new lines (whitespace-nowrap)
                    </div>
                </div>
            </div>

            <!-- Currency Formatting -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Currency Formatting</div>
                <div class="space-y-3">
                    <div class="currency currency-large currency-positive">+$1,234.56</div>
                    <div class="currency currency-medium currency-negative">-$567.89</div>
                    <div class="currency currency-small currency-neutral">$0.00</div>
                </div>
            </div>

            <!-- Professional Typography Examples -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Professional Typography Examples</div>
                <div class="space-y-6">
                    <!-- Article Layout -->
                    <RCard Variant="CardVariant.Glass" Class="p-6">
                        <ChildContent>
                            <article>
                                <header class="mb-4">
                                    <h1 class="text-h2 mb-2">The Future of Design Systems</h1>
                                    <div class="text-caption text-muted">
                                        Published on March 15, 2024 • 5 min read
                                    </div>
                                </header>
                                
                                <div class="text-body-1 leading-relaxed space-y-4">
                                    <p>
                                        Design systems have revolutionized the way we approach user interface design. 
                                        They provide a shared language and consistent building blocks that enable teams 
                                        to create cohesive experiences across multiple platforms and products.
                                    </p>
                                    
                                    <p class="text-body-2 text-muted">
                                        Modern design systems go beyond just visual components—they encompass design tokens, 
                                        accessibility guidelines, and interaction patterns that ensure consistency at scale.
                                    </p>
                                </div>
                            </article>
                        </ChildContent>
                    </RCard>

                    <!-- Dashboard Stats -->
                    <RCard Variant="CardVariant.Glass" Class="p-6">
                        <ChildContent>
                            <h3 class="text-h4 mb-4">Dashboard Overview</h3>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div class="text-center">
                                    <div class="text-3xl font-bold text-primary mb-1">1,247</div>
                                    <div class="text-sm text-muted">Total Users</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-3xl font-bold text-success mb-1">$45.2K</div>
                                    <div class="text-sm text-muted">Revenue</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-3xl font-bold text-warning mb-1">23</div>
                                    <div class="text-sm text-muted">Pending Orders</div>
                                </div>
                            </div>
                        </ChildContent>
                    </RCard>

                    <!-- Form Typography -->
                    <RCard Variant="CardVariant.Glass" Class="p-6">
                        <ChildContent>
                            <h3 class="text-h4 mb-4">Form Typography</h3>
                            <div class="space-y-4">
                                <div>
                                    <label class="text-sm font-medium text-primary">Email Address</label>
                                    <div class="text-xs text-muted mt-1">We'll never share your email with anyone else.</div>
                                </div>
                                
                                <div>
                                    <label class="text-sm font-medium text-primary">Description</label>
                                    <div class="text-xs text-muted mt-1">
                                        Optional: Provide additional context or details.
                                    </div>
                                </div>
                                
                                <div class="text-xs text-error">
                                    ⚠️ This field is required and cannot be empty.
                                </div>
                            </div>
                        </ChildContent>
                    </RCard>
                </div>
            </div>

            <!-- Responsive Typography -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Responsive Typography</div>
                <div class="space-y-3">
                    <div class="text-base md:text-lg lg:text-xl">
                        Responsive text that scales with screen size
                    </div>
                    <div class="text-center md:text-left lg:text-right">
                        Responsive alignment changes
                    </div>
                    <div class="font-normal md:font-medium lg:font-bold">
                        Responsive font weight changes
                    </div>
                </div>
            </div>
        </div>
    </ChildContent>
</RCard>