@* ProductSelectionModal - Demo modal for testing *@

<div class="p-4">
    <h3>Product Selection for @Parameters.CustomerName</h3>
    
    <div class="space-y-3">
        @foreach (var product in Parameters.AvailableProducts)
        {
            <div class="d-flex align-center justify-between p-3 border rounded">
                <div>
                    <strong>@product.Name</strong>
                    <span class="text-muted">- $@product.Price</span>
                </div>
                <input type="checkbox" @bind="@(product.IsSelected)" />
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public ProductSelectionParameters Parameters { get; set; } = new();
    
    public class ProductSelectionParameters
    {
        public string CustomerName { get; set; } = "";
        public List<ProductInfo> AvailableProducts { get; set; } = new();
        public List<int> SelectedProductIds { get; set; } = new();
        public string ModalId { get; set; } = "";
    }
    
    public class ProductInfo 
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public decimal Price { get; set; }
        
        public bool IsSelected { get; set; }
    }
}