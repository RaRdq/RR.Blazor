@using RR.Blazor.Models
@using RR.Blazor.Components.Form

<div class="space-y-4 pa-4">
    <RTextInput @bind-Value="Parameters.Name" 
                Label="Full Name" 
                Placeholder="Enter your name" />
    
    <RTextInput @bind-Value="Parameters.Email" 
                Label="Email Address" 
                Placeholder="Enter your email" />
    
    <RTextInput @bind-Value="Parameters.Bio" 
                Label="Biography" 
                Placeholder="Tell us about yourself" />
    
    <div class="text-sm text-muted">
        Modal ID: @Parameters.ModalId
    </div>
</div>

@code {
    [Parameter] public UserFormParameters Parameters { get; set; } = new();
    
    public class UserFormParameters : ModalParametersBase
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Bio { get; set; } = "";
    }
}