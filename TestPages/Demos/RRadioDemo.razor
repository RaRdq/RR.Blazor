@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Form
@using RR.Blazor.Enums

<RCard Variant="CardVariant.Outlined" Text="RRadio">
    <ChildContent>
        <RDivider Text="Radio Component" 
                  Subtitle="Professional radio buttons for single selection with semantic variants"
                  Icon="radio_button_checked" />
        
        <div class="space-y-6">
            <!-- Basic Examples -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Basic Examples</div>
                <div class="space-y-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Simple Radio Group</p>
                        <RRadioGroup @bind-Value="_basicSelection" Name="basic">
                            <RRadio Value="@("option1")" Text="Option 1" />
                            <RRadio Value="@("option2")" Text="Option 2" />
                            <RRadio Value="@("option3")" Text="Option 3" />
                        </RRadioGroup>
                    </div>
                    
                    <div>
                        <p class="text-sm text-muted mb-2">With Descriptions</p>
                        <RRadioGroup @bind-Value="_descriptionSelection" Name="descriptions">
                            <RRadio Value="@("starter")" 
                                   Text="Starter Plan" 
                                   Description="Basic features for small teams" />
                            <RRadio Value="@("professional")" 
                                   Text="Professional Plan" 
                                   Description="Advanced features for growing businesses" />
                            <RRadio Value="@("enterprise")" 
                                   Text="Enterprise Plan" 
                                   Description="Full features with priority support" />
                        </RRadioGroup>
                    </div>
                </div>
            </div>

            <!-- Variants -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Variants</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Primary Variant</p>
                        <RRadioGroup @bind-Value="_primaryVariant" Name="primary">
                            <RRadio Value="@("yes")" Text="Yes" Variant="RadioVariant.Primary" />
                            <RRadio Value="@("no")" Text="No" Variant="RadioVariant.Primary" />
                        </RRadioGroup>
                    </div>
                    
                    <div>
                        <p class="text-sm text-muted mb-2">Success Variant</p>
                        <RRadioGroup @bind-Value="_successVariant" Name="success">
                            <RRadio Value="@("approved")" Text="Approved" Variant="RadioVariant.Success" />
                            <RRadio Value="@("pending")" Text="Pending" Variant="RadioVariant.Success" />
                        </RRadioGroup>
                    </div>
                    
                    <div>
                        <p class="text-sm text-muted mb-2">Warning Variant</p>
                        <RRadioGroup @bind-Value="_warningVariant" Name="warning">
                            <RRadio Value="@("moderate")" Text="Moderate Risk" Variant="RadioVariant.Warning" />
                            <RRadio Value="@("high")" Text="High Risk" Variant="RadioVariant.Warning" />
                        </RRadioGroup>
                    </div>
                    
                    <div>
                        <p class="text-sm text-muted mb-2">Error Variant</p>
                        <RRadioGroup @bind-Value="_errorVariant" Name="error">
                            <RRadio Value="@("critical")" Text="Critical" Variant="RadioVariant.Danger" />
                            <RRadio Value="@("failed")" Text="Failed" Variant="RadioVariant.Danger" />
                        </RRadioGroup>
                    </div>
                </div>
            </div>

            <!-- Sizes -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Sizes</div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Small Size</p>
                        <RRadioGroup @bind-Value="_smallSize" Name="small">
                            <RRadio Value="@("small1")" Text="Small Option 1" Size="SizeType.Small" />
                            <RRadio Value="@("small2")" Text="Small Option 2" Size="SizeType.Small" />
                        </RRadioGroup>
                    </div>
                    
                    <div>
                        <p class="text-sm text-muted mb-2">Medium Size</p>
                        <RRadioGroup @bind-Value="_mediumSize" Name="medium">
                            <RRadio Value="@("medium1")" Text="Medium Option 1" Size="SizeType.Medium" />
                            <RRadio Value="@("medium2")" Text="Medium Option 2" Size="SizeType.Medium" />
                        </RRadioGroup>
                    </div>
                    
                    <div>
                        <p class="text-sm text-muted mb-2">Large Size</p>
                        <RRadioGroup @bind-Value="_largeSize" Name="large">
                            <RRadio Value="@("large1")" Text="Large Option 1" Size="SizeType.Large" />
                            <RRadio Value="@("large2")" Text="Large Option 2" Size="SizeType.Large" />
                        </RRadioGroup>
                    </div>
                </div>
            </div>

            <!-- Standalone Radio Buttons (without group) -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Standalone Radio Buttons</div>
                <div class="space-y-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Individual Radio Buttons (manually managed)</p>
                        <div class="space-y-2">
                            <RRadio Value="@("standalone1")" @bind-SelectedValue="_standaloneSelection" Name="standalone" Text="Standalone Option 1" />
                            <RRadio Value="@("standalone2")" @bind-SelectedValue="_standaloneSelection" Name="standalone" Text="Standalone Option 2" />
                            <RRadio Value="@("standalone3")" @bind-SelectedValue="_standaloneSelection" Name="standalone" Text="Standalone Option 3" />
                        </div>
                    </div>
                    
                    <div>
                        <p class="text-sm text-muted mb-2">Different Groups (can select one from each)</p>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <p class="text-xs text-muted mb-1">Question 1: Preferred Contact</p>
                                <div class="space-y-1">
                                    <RRadio Value="@("email")" @bind-SelectedValue="_contactMethod" Name="contact" Text="Email" Icon="email" Size="SizeType.Small" />
                                    <RRadio Value="@("phone")" @bind-SelectedValue="_contactMethod" Name="contact" Text="Phone" Icon="phone" Size="SizeType.Small" />
                                </div>
                            </div>
                            <div>
                                <p class="text-xs text-muted mb-1">Question 2: Preferred Time</p>
                                <div class="space-y-1">
                                    <RRadio Value="@("morning")" @bind-SelectedValue="_preferredTime" Name="time" Text="Morning" Size="SizeType.Small" />
                                    <RRadio Value="@("afternoon")" @bind-SelectedValue="_preferredTime" Name="time" Text="Afternoon" Size="SizeType.Small" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Professional Use Cases -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Professional Use Cases</div>
                <div class="space-y-4">
                    <div>
                        <p class="text-sm text-muted mb-2">Payment Method Selection</p>
                        <RRadioGroup @bind-Value="_paymentMethod" Name="payment">
                            <RRadio Value="@("credit")" 
                                   Text="Credit Card" 
                                   Description="Visa, MasterCard, American Express"
                                   Icon="credit_card" />
                            <RRadio Value="@("paypal")" 
                                   Text="PayPal" 
                                   Description="Pay with your PayPal account"
                                   Icon="account_balance_wallet" />
                            <RRadio Value="@("bank")" 
                                   Text="Bank Transfer" 
                                   Description="Direct bank account transfer"
                                   Icon="account_balance" />
                        </RRadioGroup>
                    </div>
                    
                    <div>
                        <p class="text-sm text-muted mb-2">Notification Preferences</p>
                        <RRadioGroup @bind-Value="_notifications" Name="notifications">
                            <RRadio Value="@("all")" 
                                   Text="All Notifications" 
                                   Description="Email and push notifications" />
                            <RRadio Value="@("important")" 
                                   Text="Important Only" 
                                   Description="Critical updates only" />
                            <RRadio Value="@("none")" 
                                   Text="No Notifications" 
                                   Description="Disable all notifications" />
                        </RRadioGroup>
                    </div>
                </div>
            </div>

            <!-- Current State Display -->
            <div class="space-y-2">
                <div class="text-h6 font-semibold">Current Selections</div>
                <RCard Variant="CardVariant.Glass" Class="p-4">
                    <ChildContent>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                            <div>Basic: @_basicSelection</div>
                            <div>Payment: @_paymentMethod</div>
                            <div>Notifications: @_notifications</div>
                            <div>Primary: @_primaryVariant</div>
                            <div>Success: @_successVariant</div>
                            <div>Warning: @_warningVariant</div>
                            <div>Error: @_errorVariant</div>
                        </div>
                    </ChildContent>
                </RCard>
            </div>
        </div>
    </ChildContent>
</RCard>

@code {
    // Basic examples
    private string _basicSelection = "option1";
    private string _descriptionSelection = "professional";

    // Variants
    private string _primaryVariant = "yes";
    private string _successVariant = "approved";
    private string _warningVariant = "moderate";
    private string _errorVariant = "critical";

    // Sizes
    private string _smallSize = "small1";
    private string _mediumSize = "medium1";
    private string _largeSize = "large1";

    // Professional use cases
    private string _paymentMethod = "credit";
    private string _notifications = "important";
    
    // Standalone examples
    private string _standaloneSelection = "standalone1";
    private string _contactMethod = "email";
    private string _preferredTime = "morning";
}