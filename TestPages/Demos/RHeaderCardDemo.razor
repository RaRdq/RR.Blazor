@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums

<RCard Variant="CardVariant.Outlined" Text="RHeaderCard">
    <ChildContent>
        <RDivider Text="Header Card Component" 
                         Subtitle="Header card for page titles and descriptions with alignment and icon positioning" 
                         Icon="title" />
        
        <div class="space-y-6">
            <!-- Basic Header Cards -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Basic Usage</div>
                <RHeaderCard Header="Welcome to Dashboard" Description="Your centralized control center" />
            </div>

            <!-- Alignment Options -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Alignment Options</div>
                <div class="space-y-4">
                    <RHeaderCard Header="Start Aligned Header" 
                               Description="Left-aligned content (default)" 
                               Icon="align_horizontal_left"
                               Alignment="ActionGroupAlignment.Start" />
                    <RHeaderCard Header="Center Aligned Header" 
                               Description="Center-aligned content for hero sections" 
                               Icon="align_horizontal_center"
                               Alignment="ActionGroupAlignment.Center" />
                    <RHeaderCard Header="End Aligned Header" 
                               Description="Right-aligned content for special layouts" 
                               Icon="align_horizontal_right"
                               Alignment="ActionGroupAlignment.End" />
                </div>
            </div>

            <!-- Icon Position Options -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Icon Positioning</div>
                <div class="space-y-4">
                    <RHeaderCard Header="Start Icon Position" 
                               Description="Icon at the beginning (default)" 
                               Icon="arrow_forward"
                               IconPosition="IconPosition.Start" />
                    <RHeaderCard Header="End Icon Position" 
                               Description="Icon at the end of the content" 
                               Icon="arrow_forward"
                               IconPosition="IconPosition.End" />
                    <RHeaderCard Header="Top Icon Position" 
                               Description="Icon above the title and description" 
                               Icon="cloud"
                               IconPosition="IconPosition.Top"
                               Alignment="ActionGroupAlignment.Center" />
                    <RHeaderCard Header="Bottom Icon Position" 
                               Description="Icon below the title and description" 
                               Icon="star"
                               IconPosition="IconPosition.Bottom"
                               Alignment="ActionGroupAlignment.Center" />
                </div>
            </div>

            <!-- Combined Alignments and Positions -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Combined Options</div>
                <div class="space-y-4">
                    <RHeaderCard Header="Center + Top Icon" 
                               Description="Perfect for hero headers and landing pages" 
                               Icon="star"
                               IconPosition="IconPosition.Top"
                               Alignment="ActionGroupAlignment.Center" />
                    <RHeaderCard Header="End + End Icon" 
                               Description="Right-aligned with trailing icon" 
                               Icon="chevron_right"
                               IconPosition="IconPosition.End"
                               Alignment="ActionGroupAlignment.End" />
                    <RHeaderCard Header="Start + Start Icon" 
                               Description="Traditional left-aligned layout" 
                               Icon="dashboard"
                               IconPosition="IconPosition.Start"
                               Alignment="ActionGroupAlignment.Start" />
                </div>
            </div>

            <!-- Gradient Header Cards -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Gradient Glassmorphism Headers</div>
                <div class="space-y-4">
                    <RHeaderCard Header="Premium Features" 
                               Icon="auto_awesome" 
                               Variant="CardVariant.Gradient">
                        <ChildContent>
                            Experience the power of gradient design with solid colors
                        </ChildContent>
                    </RHeaderCard>
                    <RHeaderCard Header="Enterprise Dashboard" 
                               Icon="business" 
                               Variant="CardVariant.GlassGradient">
                        <ChildContent>
                            Premium glassmorphism with gradient overlay for executive views
                        </ChildContent>
                    </RHeaderCard>
                </div>
            </div>
        </div>
    </ChildContent>
</RCard>