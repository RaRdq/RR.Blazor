@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums

<RCard Variant="CardVariant.Outlined" Text="RThemeProvider">
    <ChildContent>
        <RDivider Text="Theme Provider Component" 
                         Subtitle="Theme provider for managing application-wide theming" 
                         Icon="palette" />
        
        <div class="space-y-6">
            <!-- Theme Provider Info -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Theme Management</div>
                <div class="space-y-3">
                    <div class="p-4 bg-surface rounded border">
                        <p class="text-base mb-2"><strong>RThemeProvider</strong> is already active on this page!</p>
                        <p class="text-sm text-muted">This component wraps the entire showcase to provide consistent theming across all components. It manages:</p>
                        <ul class="list-disc list-inside text-sm text-muted mt-2 space-y-1">
                            <li>CSS custom properties for colors and spacing</li>
                            <li>Dark/light theme switching capabilities</li>
                            <li>Component variant theming</li>
                            <li>Responsive design tokens</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Theme Usage Example -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Usage Example</div>
                <div class="bg-surface-elevated p-4 rounded font-mono text-sm">
                    <div>&lt;RThemeProvider&gt;</div>
                    <div class="ml-4">&lt;!-- Your application content --&gt;</div>
                    <div class="ml-4">&lt;YourComponent /&gt;</div>
                    <div>&lt;/RThemeProvider&gt;</div>
                </div>
            </div>

            <!-- Benefits -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Key Benefits</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pa-2">
                    <RCard Text="Consistent Theming" 
                           Content="Ensures all RR.Blazor components use consistent colors and styling"
                           Icon="palette" 
                           Variant="CardVariant.Outlined" />
                    <RCard Text="Theme Switching" 
                           Content="Enables seamless light/dark theme transitions"
                           Icon="brightness_6" 
                           Variant="CardVariant.Outlined" />
                    <RCard Text="CSS Variables" 
                           Content="Provides design system variables for custom components"
                           Icon="style"
                           Variant="CardVariant.Outlined" />
                    <RCard Text="Responsive Design" 
                           Content="Built-in responsive breakpoints and design tokens"
                           Icon="devices"
                           Variant="CardVariant.Outlined" />
                </div>
            </div>
        </div>
    </ChildContent>
</RCard>