@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums

<RCard Variant="CardVariant.Outlined" Text="RThemeSwitcher">
    <ChildContent>
        <RDivider Text="Theme Switcher Component" 
                         Subtitle="Interactive theme switcher for light/dark mode toggle" 
                         Icon="brightness_6" />
        
        <div class="space-y-6">
            <!-- Theme Switcher Demo -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Interactive Theme Switcher</div>
                <div class="p-6 bg-surface rounded border text-center">
                    <p class="text-base mb-4">Click the theme switcher below to toggle between light and dark themes:</p>
                    <RThemeSwitcher />
                    <p class="text-sm text-muted mt-4">The theme change will be applied to the entire showcase page.</p>
                </div>
            </div>

            <!-- Features -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Features</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pa-2">
                    <RCard Text="Smooth Transitions" 
                           Content="Animated transitions between light and dark themes"
                           Icon="animation" 
                           Variant="CardVariant.Outlined" />
                    <RCard Text="System Preference" 
                           Content="Respects user's system theme preference by default"
                           Icon="settings" 
                           Variant="CardVariant.Outlined" />
                    <RCard Text="Persistent State" 
                           Content="Remembers user's theme choice across sessions"
                           Icon="save" 
                           Variant="CardVariant.Outlined" />
                    <RCard Text="Accessibility" 
                           Content="Full keyboard navigation and screen reader support"
                           Icon="accessibility" 
                           Variant="CardVariant.Outlined" />
                </div>
            </div>

            <!-- Integration Guide -->
            <div class="space-y-4">
                <div class="text-h6 font-semibold">Integration</div>
                <div class="space-y-3">
                    <div class="p-4 bg-surface rounded border">
                        <p class="text-sm mb-2"><strong>Simple Integration:</strong></p>
                        <div class="bg-surface-elevated p-3 rounded font-mono text-sm">
                            &lt;RThemeSwitcher /&gt;
                        </div>
                    </div>
                    <div class="p-4 bg-surface rounded border">
                        <p class="text-sm text-muted">The theme switcher works automatically with RThemeProvider and doesn't require any additional configuration. It can be placed anywhere in your application layout.</p>
                    </div>
                </div>
            </div>
        </div>
    </ChildContent>
</RCard>