@page "/test/data-showcase"
@using RR.Blazor.TestPages.Demos
@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Display
@using RR.Blazor.Components.Feedback
@using RR.Blazor.Enums

<RThemeProvider>
    <div class="container pa-6">
        <RHeaderCard Title="RR.Blazor Data Components Showcase" 
                     Icon="table_chart">
            <ChildContent>
                Comprehensive demonstration of grid, table, chart, filter, and export components with advanced features, performance metrics, and production-ready use cases
            </ChildContent>
        </RHeaderCard>

        <div class="space-y-8 mt-6">
            <!-- Data Components Grid -->
            <div class="space-y-4">
                <RDivider Text="Data Components" 
                          Subtitle="Advanced data display, visualization, filtering, and export components with high-performance features" 
                          Icon="table_chart" />
                
                <div class="grid grid-cols-1 gap-6">
                    <!-- RGrid Demo - Full Width -->
                    <RGridDemo />
                    
                    <!-- RTable Demo - Full Width -->  
                    <RTableDemo />
                    
                    <!-- RFilter Demo - Full Width -->
                    <RFilterDemo />
                    
                    <!-- RExport Demo - Full Width -->
                    <RExportDemo />

                    <!-- RChart Demo - Full Width -->
                    <RChartDemo />
                </div>
            </div>

            <!-- Summary -->
            <RCard Variant="CardVariant.Glass" class="mt-8">
                <ChildContent>
                    <RDivider Text="Data Components Summary" Icon="summarize" />
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 ma-4">
                        <RCard Text="5 Data Components" 
                               Content="RGrid, RTable, RChart, RFilter, RExport with comprehensive feature sets"
                               Icon="table_chart" 
                               Variant="CardVariant.Outlined" />
                        <RCard Text="Performance Optimized" 
                               Content="Virtualization, lazy loading, and efficient data handling"
                               Icon="speed" 
                               Variant="CardVariant.Outlined" />
                        <RCard Text="Visual Analytics" 
                               Content="Adaptive charts with legends, tooltips, and data mapping"
                               Icon="insights" 
                               Variant="CardVariant.Outlined" />
                        <RCard Text="Export Capabilities" 
                               Content="Multiple formats: CSV, Excel, JSON, PDF with customization"
                               Icon="download" 
                               Variant="CardVariant.Outlined" />
                        <RCard Text="Advanced Filtering" 
                               Content="Complex filters, ranges, multi-select, and real-time results"
                               Icon="filter_list" 
                               Variant="CardVariant.Outlined" />
                    </div>
                </ChildContent>
            </RCard>
        </div>
    </div>
</RThemeProvider>

@code {
    // This page now uses individual demo components
    // All data component logic has been moved to their respective demo files:
    // - RGridDemo.razor - Advanced grid with virtualization, filtering, sorting, export
    // - RTableDemo.razor - High-performance table with search, pagination, templates
    // - RFilterDemo.razor - Comprehensive filtering system with real-time results
    // - RExportDemo.razor - Multi-format export system with batch operations
    // - RChartDemo.razor - Adaptive charts (generic mapping + presentation shell)
}
