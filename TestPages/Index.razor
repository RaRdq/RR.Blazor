@page "/test"
@page "/showcase"
@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Display

<div class="pa-4">
    <h1 class="text-h3 mb-6">RR.Blazor Component Showcases</h1>
    
    <RAlert Type="AlertType.Info" Icon="info">
        <strong>Note:</strong> These are demonstration pages for the RR.Blazor component library. 
        They showcase proper usage patterns and available features.
    </RAlert>
    <RCard Text="Available Showcases" 
           SubText="Comprehensive demonstration pages for RR.Blazor components"
           Icon="dashboard"
           Class="mb-6">
        <div class="pa-4">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                
                <RCard Text="All R* Components Showcase" 
                       SubText="Complete demo collection: Core, Form, Feedback & System components with 17 individual R* component demos in organized sections"
                       Icon="widgets"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/core-components"))"
                       Class="cursor-pointer hover-elevated"
                       Variant="CardVariant.Glass">
                    <ChildContent>
                        <div class="pa-4">
                            <div class="text-h6 mb-3 flex items-center gap-2">
                                <i class="icon">widgets</i>
                                All R* Components Showcase
                            </div>
                            <p class="text-sm text-muted mb-4">Complete demo collection: Core, Form, Feedback & System components with 17 individual R* component demos in organized sections</p>
                            <div class="flex flex-wrap gap-2 mb-3">
                                <RBadge Text="RButton" Variant="VariantType.Primary" Size="SizeType.Small" />
                                <RBadge Text="RCard" Variant="VariantType.Secondary" Size="SizeType.Small" />
                                <RBadge Text="RAlert" Variant="VariantType.Info" Size="SizeType.Small" />
                                <RBadge Text="RTextInput" Variant="VariantType.Success" Size="SizeType.Small" />
                                <RBadge Text="RProgressBar" Variant="VariantType.Warning" Size="SizeType.Small" />
                                <RBadge Text="+12 more" Variant="VariantType.Secondary" Size="SizeType.Small" />
                            </div>
                        </div>
                    </ChildContent>
                </RCard>
                
                <RCard Text="Data Components Showcase" 
                       SubText="Tables, Grids, Lists, Charts and complex data display components with filtering, export, and virtualization"
                       Icon="table_chart"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/data-showcase"))"
                       Class="cursor-pointer hover-elevated"
                       Variant="CardVariant.Glass">
                    <ChildContent>
                        <div class="pa-4">
                            <div class="text-h6 mb-3 flex items-center gap-2">
                                <i class="icon">table_chart</i>
                                Data Components Showcase
                            </div>
                            <p class="text-sm text-muted mb-4">Tables, Grids, Lists, Charts and complex data display components with filtering, export, and virtualization</p>
                            <div class="flex flex-wrap gap-2 mb-3">
                                <RBadge Text="RGrid" Variant="VariantType.Primary" Size="SizeType.Small" />
                                <RBadge Text="RTable" Variant="VariantType.Secondary" Size="SizeType.Small" />
                                <RBadge Text="RChart" Variant="VariantType.Info" Size="SizeType.Small" />
                                <RBadge Text="RFilter" Variant="VariantType.Success" Size="SizeType.Small" />
                                <RBadge Text="RPivotGrid" Variant="VariantType.Warning" Size="SizeType.Small" />
                                <RBadge Text="+15 more" Variant="VariantType.Secondary" Size="SizeType.Small" />
                            </div>
                        </div>
                    </ChildContent>
                </RCard>
                
            </div>
            
            <div class="mt-6 pa-4 rounded bg-info-light text-info">
                <div class="flex items-start gap-3">
                    <i class="icon text-lg">lightbulb</i>
                    <div>
                        <div class="font-semibold mb-1">Consolidated Design</div>
                        <div class="text-sm">All R* components are now organized in comprehensive showcases. Each component has its own dedicated demo section with examples, variants, and professional use cases.</div>
                    </div>
                </div>
            </div>
        </div>
    </RCard>
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
}