@page "/test"
@page "/showcase"
@using RR.Blazor.Components.Core
@using RR.Blazor.Components.Display

<div class="pa-4">
    <h1 class="text-h3 mb-6">RR.Blazor Component Showcases</h1>
    
    <RAlert Type="AlertType.Info" Icon="info">
        <strong>Note:</strong> These are demonstration pages for the RR.Blazor component library. 
        They showcase proper usage patterns and available features.
    </RAlert>
    <RCard Text="Available Showcases" 
           SubText="Working demonstration pages for RR.Blazor components"
           Icon="dashboard"
           Class="mb-6">
        <div class="pa-4">
            <div class="grid grid-cols-1 grid-cols-md-2 gap-4">
                
                <RCard Text="Core Components" 
                       SubText="Buttons, Cards, Chips, Badges"
                       Icon="widgets"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/core-components"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
                <RCard Text="Form Components" 
                       SubText="Inputs, Selects, Date Pickers, Toggles"
                       Icon="edit_note"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/form-components"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
                <RCard Text="Data Display" 
                       SubText="Tables, Lists, Trees, Stats"
                       Icon="table_chart"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/data-display"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
                <RCard Text="Data Grid" 
                       SubText="RGrid with all features"
                       Icon="grid_view"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/data-grid-showcase"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
                <RCard Text="Filter Demo" 
                       SubText="RFilter + RGrid Integration"
                       Icon="filter_alt"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/filter-demo"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
                <RCard Text="Template Showcase" 
                       SubText="All Template Features & Smart Detection"
                       Icon="auto_awesome"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/template-showcase"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
                <RCard Text="Feedback & Navigation" 
                       SubText="Alerts, Snackbars, Breadcrumbs, Tabs"
                       Icon="notifications"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/feedback-navigation"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
                <RCard Text="Layout Utilities" 
                       SubText="Spacing, Grid, Flexbox, Responsive"
                       Icon="dashboard_customize"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/layout-utilities"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
                <RCard Text="Export System" 
                       SubText="Data Export, CSV, JSON, XML, Excel"
                       Icon="file_download"
                       Clickable="true"
                       OnClick="@(() => Navigation.NavigateTo("/test/export"))"
                       Class="cursor-pointer hover-elevated">
                </RCard>
                
            </div>
        </div>
    </RCard>
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
}