Usage Example:


builder.Services.AddRRToast(options =>
{
    options.Position = ToastPosition.TopRight;
    options.DefaultStyleType = StyleType.Material; // Default Material Design
    options.MaxToasts = 5;
    options.DefaultDuration = 4000;
});


<RToastContainer />


@inject IToastService ToastService

// Material Design toasts (default)
ToastService.ShowSuccess("Record saved successfully!");
ToastService.ShowError("Failed to save record", "Error");

// Glass variant toasts
ToastService.ShowSuccess("Glass success!", styleType: StyleType.Glass);
ToastService.ShowError("Glass error!", "Error", StyleType.Glass);

// Advanced usage with ToastMessage
ToastService.Show(new ToastMessage 
{
    Type = ToastType.Info,
    StyleType = StyleType.Glass,
    Title = "New Update",
    Message = "A new version is available",
    ActionText = "Update Now",
    OnAction = () => Navigation.NavigateTo("/update"),
    Duration = 0 // Don't auto-hide
});
