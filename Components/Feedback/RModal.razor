                                </RButton>
                            }
                            @if (ShowPrimaryButton)
                            {
                                <RButton Variant="ButtonVariant.Primary" 
                                        Size="@ButtonSize" 
                                        Icon="@(Processing && ShowPrimaryButtonSpinner ? null : PrimaryIcon)" IconPosition="IconPosition.Start" 
                                        Class="@PrimaryButtonClass" 
