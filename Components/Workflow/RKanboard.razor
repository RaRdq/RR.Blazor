    private static string ComputeBoardSignature(RKanboardBoardState? board)
    {
        if (board?.Columns is null)
        {
            return "empty";
        }

        var hash = new HashCode();
        hash.Add(board.Columns.Count);

        foreach (var column in board.Columns)
        {
            hash.Add(column.Id);
            hash.Add(column.CardIds.Count);

            foreach (var cardId in column.CardIds)
            {
                hash.Add(cardId);
            }
        }

        if (board.Cards is not null)
        {
            hash.Add(board.Cards.Count);
        }

        return hash.ToHashCode().ToString("X8", CultureInfo.InvariantCulture);
    }

