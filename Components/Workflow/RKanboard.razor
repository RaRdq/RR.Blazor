            return null;
        }

        return AssigneeOptions.FirstOrDefault(option => string.Equals(option.Id, card.AssigneeId, StringComparison.Ordinal));
    }

    private IEnumerable<RKanboardAssigneeOption> GetDefaultAssigneeOptions()
