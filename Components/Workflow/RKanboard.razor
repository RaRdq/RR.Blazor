            lookup = column.CardIds
                .Select((id, idx) => (id, idx))
                .ToDictionary(pair => pair.id, pair => pair.idx, StringComparer.Ordinal);
            columnIndexLookups[column.Id] = lookup;
        }

        return lookup.TryGetValue(card.Id, out var index) ? index : 0;
    }

