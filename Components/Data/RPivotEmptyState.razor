@using RR.Blazor.Components.Base
@inherits RComponentBase

<div class="flex flex-col items-center justify-center gap-3 pa-8 text-center @Class">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <i class="icon text-4xl text-muted">@Icon</i>
    }
    <div class="text-lg font-semibold text-on-surface">@(!string.IsNullOrEmpty(Text) ? Text : "No data available")</div>
    <div class="text-sm text-muted">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string Icon { get; set; } = "pivot_table_chart";
    [Parameter] public string Text { get; set; } = "No data available";
}
