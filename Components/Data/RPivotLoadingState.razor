@using RR.Blazor.Models
@using RR.Blazor.Enums
@using RR.Blazor.Components.Base
@inherits RComponentBase

<div class="flex flex-col items-center justify-center gap-3 pa-6 text-center @Class">
    <RProgressCircular Size="SizeType.Medium"
                       Value="@(HasProgress ? LoadingProgress : 0d)"
                       Indeterminate="@(!HasProgress)" />
    <div class="text-sm text-muted">
        @(!string.IsNullOrEmpty(LoadingMessage) ? LoadingMessage : "Processing pivot data...")
    </div>
</div>

@code {
    [Parameter] public double LoadingProgress { get; set; }
    [Parameter] public string LoadingMessage { get; set; } = "Processing pivot data...";

    private bool HasProgress => LoadingProgress > 0 && LoadingProgress <= 100;
}
