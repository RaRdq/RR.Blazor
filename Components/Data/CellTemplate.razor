@*
Backward compatibility component for RColumn templates.
The CellTemplate content expects 'context' to be available.
In Blazor RenderFragment<T>, the parameter is named 'context' by default.
Usage:
<RColumn>
    <CellTemplate Context="context">
        @{
            var item = context as MyType;
            // render content
        }
    </CellTemplate>
</RColumn>
*@

@if (ChildContent != null)
{
    @ChildContent
}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
}