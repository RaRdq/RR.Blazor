@namespace RR.Blazor.Components

<div class="empty-state @Class">
    <div class="empty-state__content">
        @if (!string.IsNullOrEmpty(Image))
        {
            <div class="empty-state__image">
                <img src="@Image" alt="@Title" />
            </div>
        }
        else if (!string.IsNullOrEmpty(Icon))
        {
            <div class="empty-state__icon">
                <i class="material-symbols-rounded">@Icon</i>
            </div>
        }
        
        <h3 class="empty-state__title">@Title</h3>
        
        @if (!string.IsNullOrEmpty(Description))
        {
            <p class="empty-state__description">@Description</p>
        }
        
        @if (ChildContent != null)
        {
            <div class="empty-state__custom">
                @ChildContent
            </div>
        }
        
        @if (!string.IsNullOrEmpty(ActionText) && OnAction.HasDelegate)
        {
            <div class="empty-state__actions">
                <RButton Variant="ButtonVariant.Primary" OnClick="OnAction">
                    @ActionText
                </RButton>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public string Icon { get; set; } = "inbox";
    [Parameter] public string Title { get; set; } = "No data available";
    [Parameter] public string Description { get; set; }
    [Parameter] public string ActionText { get; set; }
    [Parameter] public EventCallback OnAction { get; set; }
    [Parameter] public string Image { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Class { get; set; } = string.Empty;
}

<style>
    .empty-state {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 300px;
        padding: 3rem 2rem;
        text-align: center;
    }
    
    .empty-state__content {
        max-width: 400px;
    }
    
    .empty-state__icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background-color: var(--color-background-subtle);
        border-radius: 50%;
        color: var(--color-text-muted);
    }
    
    .empty-state__icon i {
        font-size: 2.5rem;
    }
    
    .empty-state__image {
        margin: 0 auto 1.5rem;
    }
    
    .empty-state__image img {
        max-width: 200px;
        height: auto;
    }
    
    .empty-state__title {
        margin: 0 0 0.5rem;
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-text-primary);
    }
    
    .empty-state__description {
        margin: 0 0 1.5rem;
        color: var(--color-text-secondary);
        line-height: 1.5;
    }
    
    .empty-state__custom {
        margin: 1rem 0;
    }
    
    .empty-state__actions {
        margin-top: 1.5rem;
    }
</style>