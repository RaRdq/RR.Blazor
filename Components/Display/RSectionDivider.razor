@namespace RR.Blazor.Components.Display
@using RR.Blazor.Components.Base
@inherits RComponentBase

<div class="@GetClasses()">
    @if (!string.IsNullOrEmpty(Text))
    {
        <span class="section-divider-text">@Text</span>
    }
    @if (ChildContent != null)
    {
        <span class="section-divider-content">
            @ChildContent
        </span>
    }
</div>

@code {
    [Parameter] public string Text { get; set; }
    [Parameter] public bool Vertical { get; set; }
    
    private string GetClasses()
    {
        var classes = new List<string> { "section-divider" };
        
        if (Vertical)
        {
            classes.Add("section-divider-vertical");
        }
        else
        {
            classes.Add("section-divider-horizontal");
        }
        
        if (!string.IsNullOrEmpty(Text) || ChildContent != null)
        {
            classes.Add("section-divider-with-content");
        }
        
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        
        return string.Join(" ", classes);
    }
}