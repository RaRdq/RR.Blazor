@* RMetric - Universal metric display component for business dashboards *@
@using RR.Blazor.Enums
@using RR.Blazor.Models
@using RR.Blazor.Components.Base
@inherits RInteractiveComponentBase

<div class="metric @GetMetricClasses()" @onclick="@HandleClick" @attributes="GetSafeAttributes()">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <div class="metric-icon mb-2">
            <i class="material-symbols-rounded @GetIconSizeClass() @GetIconColorClass()">@Icon</i>
        </div>
    }
    
    <div class="metric-content">
        <div class="metric-value @GetValueColorClass()">
            @if (!string.IsNullOrEmpty(Prefix))
            {
                <span class="metric-prefix">@Prefix</span>
            }
            @FormattedValue
            @if (!string.IsNullOrEmpty(Suffix))
            {
                <span class="metric-suffix">@Suffix</span>
            }
        </div>
        
        @if (!string.IsNullOrEmpty(Text))
        {
            <div class="metric-label">@Text</div>
        }
        
        @if (ShowChange && Change.HasValue)
        {
            <div class="metric-change metric-change-@GetChangeVariant()">
                <i class="material-symbols-rounded text-xs">@GetChangeIcon()</i>
                @GetFormattedChange()
                @if (!string.IsNullOrEmpty(ChangeSuffix))
                {
                    <span class="ml-1">@ChangeSuffix</span>
                }
            </div>
        }
        
        @if (!string.IsNullOrEmpty(Subtitle))
        {
            <div class="metric-subtitle text-xs text-secondary mt-1">@Subtitle</div>
        }
    </div>
    
    @if (ChildContent != null)
    {
        <div class="metric-extra mt-2">
            @ChildContent
        </div>
    }
    
    @if (Loading)
    {
        <div class="metric-loading absolute inset-0 bg-overlay-light flex items-center justify-center">
            <i class="material-symbols-rounded text-primary animate-spin">progress_activity</i>
        </div>
    }
</div>

@code {
    /// <summary>Metric value to display</summary>
    [Parameter]
    [AIParameter(Hint = "Main numeric or text value to display", Example = "1247", IsRequired = true)]
    public object Value { get; set; }
    
    /// <summary>Metric label/title</summary>
    [Parameter] 
    [AIParameter("Text displayed as metric title", Example = "Total Orders")] 
    public string Text { get; set; }
    
    /// <summary>Subtitle or description</summary>
    [Parameter]
    [AIParameter(Hint = "Additional descriptive text shown below the value", Example = "vs. last month")]
    public string Subtitle { get; set; }
    
    /// <summary>Icon to display</summary>
    [Parameter]
    [AIParameter(Hint = "Material Icons name to display with metric", SuggestedValues = new[] { "trending_up", "attach_money", "shopping_cart", "analytics", "account_balance" }, Example = "trending_up")]
    public string Icon { get; set; }
    
    /// <summary>Value prefix (e.g., "$", "+")</summary>
    [Parameter]
    [AIParameter(Hint = "Text displayed before the value", SuggestedValues = new[] { "$", "+", "-", "€", "£" }, Example = "$")]
    public string Prefix { get; set; }
    
    /// <summary>Value suffix (e.g., "%", "units")</summary>
    [Parameter]
    [AIParameter(Hint = "Text displayed after the value", SuggestedValues = new[] { "%", "units", "pts", "orders", "users" }, Example = "%")]
    public string Suffix { get; set; }
    
    /// <summary>Metric variant for styling</summary>
    [Parameter]
    [AIParameter(Hint = "Visual style variant for different metric types", SuggestedValues = new[] { "default", "success", "warning", "error", "info", "primary" }, Example = "success")]
    public string Variant { get; set; } = "default";
    
    /// <summary>Metric size</summary>
    [Parameter]
    [AIParameter(Hint = "Size of the metric component", SuggestedValues = new[] { "small", "medium", "large" }, Example = "medium")]
    public string Size { get; set; } = "medium";
    
    /// <summary>Format string for value display</summary>
    [Parameter]
    [AIParameter(Hint = ".NET format string for value formatting", SuggestedValues = new[] { "N0", "N2", "C", "P", "MMM dd, yyyy" }, Example = "N0")]
    public string Format { get; set; }
    
    /// <summary>Whether to show change indicator</summary>
    [Parameter]
    [AIParameter(Hint = "Display change indicator with trending icon")]
    public bool ShowChange { get; set; }
    
    /// <summary>Change value (positive/negative)</summary>
    [Parameter]
    [AIParameter(Hint = "Numerical change value - positive shows green up arrow, negative shows red down arrow", Example = "12.5")]
    public decimal? Change { get; set; }
    
    /// <summary>Change suffix (e.g., "%", "pts")</summary>
    [Parameter]
    [AIParameter(Hint = "Text displayed after change value", SuggestedValues = new[] { "%", "pts", "units", "$" }, Example = "%")]
    public string ChangeSuffix { get; set; } = "%";
    
    /// <summary>Whether change is currency</summary>
    [Parameter]
    [AIParameter(Hint = "Format change value as currency instead of using ChangeSuffix")]
    public bool ChangeIsCurrency { get; set; }
    
    
    /// <summary>Whether metric is clickable</summary>
    [Parameter]
    [AIParameter(Hint = "Makes metric interactive with hover effects and click events")]
    public bool Clickable { get; set; }

    private string FormattedValue
    {
        get
        {
            if (Value == null) return "—";
            
            if (!string.IsNullOrEmpty(Format))
            {
                if (Value is IFormattable formattable)
                {
                    return formattable.ToString(Format, null);
                }
            }
            
            return Value switch
            {
                decimal d => d.ToString("N0"),
                double d => d.ToString("N0"),
                float f => f.ToString("N0"),
                int i => i.ToString("N0"),
                long l => l.ToString("N0"),
                _ => Value.ToString()
            };
        }
    }

    private string GetMetricClasses()
    {
        var classes = new List<string> { "relative" };
        
        // Add loading state using BEM pattern
        if (Loading)
        {
            classes.Add("metric-loading");
        }
        
        classes.Add(Size switch
        {
            "small" => "metric-small",
            "large" => "metric-large",
            _ => "metric-medium"
        });
        
        if (Clickable)
        {
            classes.AddRange(new[] { "cursor-pointer", "transition-colors", "hover:bg-surface-secondary" });
        }
        
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        
        return string.Join(" ", classes);
    }

    private string GetValueColorClass()
    {
        return Variant switch
        {
            "success" => "text-success",
            "warning" => "text-warning",
            "error" => "text-error",
            "info" => "text-info",
            "primary" => "text-primary",
            _ => "text-primary"
        };
    }

    private string GetIconColorClass()
    {
        return Variant switch
        {
            "success" => "text-success",
            "warning" => "text-warning",
            "error" => "text-error",
            "info" => "text-info",
            "primary" => "text-primary",
            _ => "text-secondary"
        };
    }

    private string GetIconSizeClass()
    {
        return Size switch
        {
            "small" => "text-lg",
            "large" => "text-3xl",
            _ => "text-2xl"
        };
    }

    private string GetChangeVariant()
    {
        if (!Change.HasValue) return "neutral";
        
        return Change.Value switch
        {
            > 0 => "positive",
            < 0 => "negative",
            _ => "neutral"
        };
    }

    private string GetChangeIcon()
    {
        if (!Change.HasValue) return "remove";
        
        return Change.Value switch
        {
            > 0 => "trending_up",
            < 0 => "trending_down",
            _ => "trending_flat"
        };
    }

    private string GetFormattedChange()
    {
        if (!Change.HasValue) return "0";
        
        var absChange = Math.Abs(Change.Value);
        
        if (ChangeIsCurrency)
        {
            return absChange.ToString("C0");
        }
        
        return absChange.ToString("N1");
    }

    protected override async Task HandleClick(MouseEventArgs e)
    {
        if (Clickable && !Loading)
        {
            await base.HandleClick(e);
        }
    }
}

@*
Usage Examples:

<!-- Basic metric -->
<RMetric Value="1247" Text="Total Orders" Icon="shopping_cart" />

<!-- Currency metric with change -->
<RMetric Value="156780" 
         Text="Monthly Revenue" 
         Prefix="$" 
         Icon="attach_money"
         ShowChange="true"
         Change="12.5"
         Variant="success" />

<!-- Percentage metric -->
<RMetric Value="87.3" 
         Text="Success Rate" 
         Suffix="%" 
         Icon="trending_up"
         Variant="success"
         Size="large" />

<!-- Custom formatted metric -->
<RMetric Value="@(DateTime.Now)" 
         Text="Last Updated" 
         Format="MMM dd, HH:mm"
         Icon="schedule"
         Size="small" />

<!-- Interactive metric -->
<RMetric Value="23" 
         Text="Pending Reviews" 
         Icon="pending"
         Variant="warning"
         Clickable="true"
         OnClick="@HandlePendingClick" />

<!-- Metric with custom content -->
<RMetric Value="94.2" 
         Text="Server Uptime" 
         Suffix="%" 
         Icon="cloud_done"
         Variant="success">
    <div class="mt-2">
        <div class="text-xs text-success">
            <i class="material-symbols-rounded text-xs">check_circle</i>
            All systems operational
        </div>
    </div>
</RMetric>

<!-- Loading metric -->
<RMetric Value="0" 
         Text="Processing..." 
         Icon="analytics"
         Loading="true" />

<!-- Financial metric with negative change -->
<RMetric Value="45230" 
         Text="Quarterly Profit" 
         Prefix="$"
         ShowChange="true"
         Change="-5.2"
         ChangeSuffix="%"
         Icon="account_balance"
         Variant="primary" />
*@