@using RR.Blazor.Components.Base
@using RR.Blazor.Enums
@inherits RComponentBase

<div class="test-modal-content p-4">
    <RStack Gap="3">
        <div>
            <RText Typography="TypographyType.H5">@Title</RText>
            @if (!string.IsNullOrEmpty(Message))
            {
                <RText Typography="TypographyType.Body1" Class="mt-2">@Message</RText>
            }
        </div>
        
        @if (!string.IsNullOrEmpty(TestParam))
        {
            <RAlert Variant="AlertVariant.Default" Type="AlertType.Info">
                Test Parameter: @TestParam
            </RAlert>
        }
        
        <div class="d-flex gap-2">
            <RButton Variant="ButtonVariant.Primary" @onclick="OnConfirmClick">
                Confirm
            </RButton>
            <RButton Variant="ButtonVariant.Secondary" @onclick="OnCancelClick">
                Cancel
            </RButton>
        </div>
    </RStack>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Test Modal";
    [Parameter] public string Message { get; set; } = "This is a test modal component.";
    [Parameter] public string TestParam { get; set; } = "";
    [Parameter] public EventCallback<string> OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    
    private async Task OnConfirmClick()
    {
        await OnConfirm.InvokeAsync("Confirmed from TestModalComponent");
    }
    
    private async Task OnCancelClick()
    {
        await OnCancel.InvokeAsync();
    }
}